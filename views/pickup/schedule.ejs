    }
    
    .summary {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }
    
    .summary-item {
      background: white;
      padding: 5px 10px;
      border-radius: 5px;
      border: 2px solid #e0e0e0;
      font-size: 12px;
    }
    
    .summary-item strong {
      color: #667eea;
      font-size: 16px;
    }
    
    .edit-hint {
      color: #666;
