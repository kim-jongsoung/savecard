          // 괌 출발 → 호텔에서 픽업
          pickupLocation = pickup.hotel_name || '-';
        } else {
          // 수동 입력 → 호텔 이름
          pickupLocation = pickup.hotel_name || '-';
        }
        
        // 외부 데이터 삭제 가능 (수동 입력 또는 엑셀 가져오기)
        const canDelete = (pickup.pickup_source === 'manual' || pickup.pickup_source === 'excel_import') && pickup.record_type === 'manual';
        
        // 외부 데이터 구분 클래스 추가
