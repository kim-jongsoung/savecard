          <td class="editable" data-field="rental_vehicle">${vehicleWithRoute}</td>
          <td class="editable" data-field="rental_number">${rentalNumber}</td>
          <td class="editable" data-field="customer_name">${pickup.customer_name || '-'}</td>
          <td class="editable" data-field="english_name">${pickup.english_name || '-'}</td>
