    }
    
    .input-section {
      background: #f8f9fa;
      padding: 10px;
      border-bottom: 2px solid #e0e0e0;
    }
    
    .input-tabs {
      display: flex;
      gap: 8px;
      margin-bottom: 8px;
    }
    
    .tab-btn {
      padding: 6px 12px;
      border: none;
      background: white;
      cursor: pointer;
      border-radius: 5px 5px 0 0;
      font-weight: bold;
      font-size: 12px;
      transition: all 0.3s;
    }
    
    .tab-btn.active {
      background: #667eea;
      color: white;
    }
    
    .tab-content {
      background: white;
      padding: 12px;
      border-radius: 0 5px 5px 5px;
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
