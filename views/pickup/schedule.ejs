    // í•œê¸€ì„ ì˜ì–´ ë¡œë§ˆì í‘œê¸°ë¡œ ë³€í™˜
    function koreanToEnglish(koreanText) {
      // ì´ˆì„±
      const CHO = [
        'g', 'kk', 'n', 'd', 'tt', 'r', 'm', 'b', 'pp', 's', 'ss', '',
        'j', 'jj', 'ch', 'k', 't', 'p', 'h'
      ];
      // ì¤‘ì„±
      const JUNG = [
        'a', 'ae', 'ya', 'yae', 'eo', 'e', 'yeo', 'ye', 'o', 'wa', 'wae',
        'oe', 'yo', 'u', 'wo', 'we', 'wi', 'yu', 'eu', 'ui', 'i'
      ];
      // ì¢…ì„± (0~27 = 28ê°œ)
      const JONG = [
        '',   // 0: ë°›ì¹¨ ì—†ìŒ
        'k',  // 1: ã„±
        'k',  // 2: ã„²
        'k',  // 3: ã„³ (ã„±+ã……)
        'n',  // 4: ã„´
        'n',  // 5: ã„µ (ã„´+ã…ˆ)
        'n',  // 6: ã„¶ (ã„´+ã…)
        'l',  // 7: ã„¹
        'k',  // 8: ã„º (ã„¹+ã„±)
        'm',  // 9: ã„» (ã„¹+ã…)
        'p',  // 10: ã„¼ (ã„¹+ã…‚)
        'l',  // 11: ã„½ (ã„¹+ã……)
        'l',  // 12: ã„¾ (ã„¹+ã…Œ)
        'p',  // 13: ã„¿ (ã„¹+ã…)
        'l',  // 14: ã…€ (ã„¹+ã…)
        'm',  // 15: ã…
        'p',  // 16: ã…‚
        'p',  // 17: ã…„ (ã…‚+ã……)
        't',  // 18: ã……
        't',  // 19: ã…†
        'ng', // 20: ã…‡
        't',  // 21: ã…ˆ
        't',  // 22: ã…Š
        'k',  // 23: ã…‹
        't',  // 24: ã…Œ
        'p',  // 25: ã…
        't',  // 26: ã…
        ''    // 27: ì‚¬ìš© ì•ˆ í•¨
      ];
      
      let result = '';
      
      for (let i = 0; i < koreanText.length; i++) {
        const char = koreanText[i];
        const code = char.charCodeAt(0);
        
        // í•œê¸€ ìœ ë‹ˆì½”ë“œ ë²”ìœ„: 0xAC00 ~ 0xD7A3
        if (code >= 0xAC00 && code <= 0xD7A3) {
          const hangulCode = code - 0xAC00;
          
          const choIndex = Math.floor(hangulCode / 588);
          const jungIndex = Math.floor((hangulCode % 588) / 28);
          const jongIndex = hangulCode % 28;
          
          // ë””ë²„ê¹…: ì¢…ì„±ì´ ã…‡(ng)ì¸ ê²½ìš° ë¡œê·¸ ì¶œë ¥
          if (jongIndex === 20) {
            console.log(`ğŸ“ "${char}" ë³€í™˜: ì¢…ì„±ì¸ë±ìŠ¤=${jongIndex}, ì¢…ì„±="${JONG[jongIndex]}"`);
          }
          
          result += CHO[choIndex];
          result += JUNG[jungIndex];
          if (JONG[jongIndex]) {
            result += JONG[jongIndex];
          }
        } else if (char === ' ') {
          result += ' ';
