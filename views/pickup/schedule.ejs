  <script>
    // 서버에서 전달받은 날짜 사용 (없으면 오늘)
    let initialDate = '<%= typeof initialDate !== "undefined" ? initialDate : "today" %>';
    let currentDate = initialDate === 'today' ? new Date().toISOString().split('T')[0] : initialDate;
    let editingCell = null;
    
    // 현재 보기 모드 및 날짜 범위 저장
    let currentViewMode = '3days'; // 'single', '3days', 'dateRange'
    let selectedDateRange = {
      start: null,
      end: null
    };
    
    document.addEventListener('DOMContentLoaded', () => {
      // 엑셀 가져오기 날짜 필드에 현재 페이지 날짜 자동 설정
      document.getElementById('excelImportDate').value = currentDate;
      
      // 기본으로 3일 보기 (어제-오늘-내일)
      load3Days();
      // 날짜 입력 필드에 현재 날짜 설정
      document.getElementById('manualDate').value = currentDate;
      
      // 한글 이름 자동 영어 변환
      const nameInput = document.getElementById('manualName');
      const engNameInput = document.getElementById('manualEngName');
      
      nameInput.addEventListener('input', (e) => {
        const koreanName = e.target.value;
        if (koreanName) {
          const englishName = koreanToEnglish(koreanName);
          console.log('🔄 한글→영어 변환:', koreanName, '→', englishName);
          engNameInput.value = englishName;
        }
      });
      
      // 날짜 범위 선택기 기본값 설정 (오늘 ~ 7일 후)
      const today = new Date();
      const weekLater = new Date(today);
      weekLater.setDate(weekLater.getDate() + 7);
      
      document.getElementById('dateRangeStart').value = today.toISOString().split('T')[0];
      document.getElementById('dateRangeEnd').value = weekLater.toISOString().split('T')[0];
    });
    
    // 한글을 영어 로마자 표기로 변환
    function koreanToEnglish(koreanText) {
      // 초성
      const CHO = [
        'g', 'kk', 'n', 'd', 'tt', 'r', 'm', 'b', 'pp', 's', 'ss', '',
        'j', 'jj', 'ch', 'k', 't', 'p', 'h'
      ];
      // 중성
      const JUNG = [
        'a', 'ae', 'ya', 'yae', 'eo', 'e', 'yeo', 'ye', 'o', 'wa', 'wae',
        'oe', 'yo', 'u', 'wo', 'we', 'wi', 'yu', 'eu', 'ui', 'i'
      ];
      // 종성 (0~27 = 28개)
      const JONG = [
        '',   // 0: 받침 없음
        'k',  // 1: ㄱ
        'k',  // 2: ㄲ
        'k',  // 3: ㄳ (ㄱ+ㅅ)
        'n',  // 4: ㄴ
        'n',  // 5: ㄵ (ㄴ+ㅈ)
        'n',  // 6: ㄶ (ㄴ+ㅎ)
        'l',  // 7: ㄹ
        'k',  // 8: ㄺ (ㄹ+ㄱ)
        'm',  // 9: ㄻ (ㄹ+ㅁ)
        'p',  // 10: ㄼ (ㄹ+ㅂ)
        'l',  // 11: ㄽ (ㄹ+ㅅ)
        'l',  // 12: ㄾ (ㄹ+ㅌ)
        'p',  // 13: ㄿ (ㄹ+ㅍ)
        'l',  // 14: ㅀ (ㄹ+ㅎ)
        'm',  // 15: ㅁ
        'p',  // 16: ㅂ
        'p',  // 17: ㅄ (ㅂ+ㅅ)
        't',  // 18: ㅅ
        't',  // 19: ㅆ
        'ng', // 20: ㅇ
        't',  // 21: ㅈ
        't',  // 22: ㅊ
        'k',  // 23: ㅋ
        't',  // 24: ㅌ
        'p',  // 25: ㅍ
        't',  // 26: ㅎ
        ''    // 27: 사용 안 함
      ];
      
      let result = '';
      
      for (let i = 0; i < koreanText.length; i++) {
        const char = koreanText[i];
        const code = char.charCodeAt(0);
        
        // 한글 유니코드 범위: 0xAC00 ~ 0xD7A3
        if (code >= 0xAC00 && code <= 0xD7A3) {
          const hangulCode = code - 0xAC00;
          
          const choIndex = Math.floor(hangulCode / 588);
          const jungIndex = Math.floor((hangulCode % 588) / 28);
          const jongIndex = hangulCode % 28;
          
          // 디버깅: 종성이 ㅇ(ng)인 경우 로그 출력
          if (jongIndex === 20) {
            console.log(`📝 "${char}" 변환: 종성인덱스=${jongIndex}, 종성="${JONG[jongIndex]}"`);
          }
          
          result += CHO[choIndex];
          result += JUNG[jungIndex];
          if (JONG[jongIndex]) {
            result += JONG[jongIndex];
          }
        } else if (char === ' ') {
          result += ' ';
        } else {
          // 영문이나 다른 문자는 그대로
          result += char;
        }
      }
      
      // 후처리: ng 뒤의 빈 초성(ㅇ)이 t로 잘못 변환되는 경우 수정
      // 예: "영어" → "YEONGT" → "YEONGEO"
      result = result.replace(/NG([AEIOU])/gi, 'NG$1').replace(/NGT/g, 'NG');
      
      return result.toUpperCase();
    }
    
    function switchTab(tab) {
      document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
      document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
      
      if (tab === 'ai') {
        document.querySelector('.tab-btn:nth-child(1)').classList.add('active');
        document.getElementById('aiTab').classList.add('active');
      } else {
        document.querySelector('.tab-btn:nth-child(2)').classList.add('active');
