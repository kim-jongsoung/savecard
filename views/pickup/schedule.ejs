          const emptyMsg = document.createElement('div');
          emptyMsg.textContent = 'ì˜ˆì•½ ì—†ìŒ';
          emptyMsg.style.cssText = 'padding: 20px; text-align: center; color: #999; background: #f5f5f5;';
          section.appendChild(emptyMsg);
        } else {
          // í…Œì´ë¸” ìƒì„±
