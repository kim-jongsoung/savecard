          </div>
        </div>
      </div>

      <!-- 예약 내역 -->
      <div class="tab-pane fade" id="list" role="tabpanel">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-4">
                <label class="form-label">출발일 검색</label>
                <input type="date" class="form-control" id="searchDate">
              </div>
              <div class="col-md-4">
                <label class="form-label">고객명 검색</label>
                <input type="text" class="form-control" id="searchName" placeholder="고객명 입력">
              </div>
              <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary w-100" onclick="loadPickups()">
                  <i class="bi bi-search"></i> 검색
                </button>
              </div>
            </div>
          </div>
        </div>

        <div id="pickupsList">
          <div class="text-center text-muted py-5">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-2">검색 버튼을 클릭하여 예약 내역을 조회하세요</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery (Select2 의존성) -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Select2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  <script>
    const AGENCY_CODE = '<%= agencyCode %>';
    const AGENCY_ID = <%= agencyId %>;

    document.addEventListener('DOMContentLoaded', () => {
      loadFlights();
      loadPickups();
    });
    
    // 항공편 로드
    async function loadFlights() {
      try {
        const res = await fetch('/pickup/api/flights/all');
        const flights = await res.json();
        
        const flightSelect = document.getElementById('flightNumber');
        flightSelect.innerHTML = '<option value="">편명 선택</option>' + 
          flights.filter(f => f.is_active).map(f => {
            const depTime = f.departure_time?.substring(0, 5);
            const arrTime = f.arrival_time?.substring(0, 5);
            const route = `${f.departure_airport} → ${f.arrival_airport}`;
            return `<option value="${f.flight_number}">${f.flight_number} (${route} ${depTime} → ${arrTime})</option>`;
          }).join('');
        
        // Select2 초기화
        $('#flightNumber').select2({
          theme: 'bootstrap-5',
          placeholder: '편명을 입력하거나 선택하세요 (예: KE111)',
          allowClear: true,
          width: '100%',
          language: {
            noResults: function() {
              return "검색 결과가 없습니다";
            },
            searching: function() {
              return "검색 중...";
            }
          }
        });
      } catch (error) {
        console.error('❌ 항공편 로드 실패:', error);
        alert('항공편 정보를 불러올 수 없습니다.');
      }
    }

    // 예약 등록
    document.getElementById('pickupForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const data = {
        pickup_type: 'arrival',  // 업체 예약은 자동으로 왕복 처리
        flight_date: document.getElementById('flightDate').value,
        flight_number: document.getElementById('flightNumber').value.toUpperCase(),
        customer_name: document.getElementById('customerName').value,
        hotel_name: document.getElementById('hotelName').value,
        phone: document.getElementById('phone').value,
        kakao_id: document.getElementById('kakaoId').value,
        adult_count: parseInt(document.getElementById('adultCount').value) || 0,
        child_count: parseInt(document.getElementById('childCount').value) || 0,
        infant_count: parseInt(document.getElementById('infantCount').value) || 0,
        luggage_count: parseInt(document.getElementById('luggageCount').value) || 0,
        memo: document.getElementById('memo').value,
        agency_id: AGENCY_ID
      };

      try {
        const res = await fetch('/pickup/api/agency-register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await res.json();

        if (res.ok) {
          alert('✅ 예약이 등록되었습니다!');
          document.getElementById('pickupForm').reset();
          loadPickups();
          // 예약 내역 탭으로 전환
          document.getElementById('list-tab').click();
        } else {
          alert('❌ 등록 실패: ' + (result.error || '알 수 없는 오류'));
        }
      } catch (error) {
        console.error('등록 오류:', error);
        alert('❌ 등록 실패: ' + error.message);
      }
    });

    // 예약 내역 조회
    async function loadPickups() {
      try {
        const searchDate = document.getElementById('searchDate').value;
        const searchName = document.getElementById('searchName').value;

        let url = `/pickup/api/agency-pickups?agency_id=${AGENCY_ID}`;
        if (searchDate) url += `&date=${searchDate}`;
        if (searchName) url += `&name=${encodeURIComponent(searchName)}`;

        const res = await fetch(url);
        const pickups = await res.json();
        
        // 왕복 예약 그룹화
        const groupedPickups = groupLinkedReservations(pickups);

        document.getElementById('totalCount').textContent = groupedPickups.length;

        if (groupedPickups.length === 0) {
          document.getElementById('pickupsList').innerHTML = `
            <div class="text-center text-muted py-5">
              <i class="bi bi-inbox" style="font-size: 3rem;"></i>
              <p class="mt-2">예약 내역이 없습니다</p>
            </div>
          `;
          return;
        }

        document.getElementById('pickupsList').innerHTML = groupedPickups.map(p => renderPickupCard(p)).join('');

      } catch (error) {
        console.error('조회 오류:', error);
        document.getElementById('pickupsList').innerHTML = `
          <div class="alert alert-danger">
            조회 실패: ${error.message}
          </div>
        `;
      }
    }
    
    // 연결된 예약 그룹화 (출발+도착을 하나로)
    function groupLinkedReservations(reservations) {
      const grouped = [];
      const processedIds = new Set();
      
      reservations.forEach(reservation => {
        if (processedIds.has(reservation.id)) return;
        
        if (reservation.record_type === 'departure') {
          const linkedArrival = reservations.find(r => r.id === reservation.linked_id);
          reservation.arrival_record = linkedArrival;
          grouped.push(reservation);
          
          processedIds.add(reservation.id);
          if (linkedArrival) {
            processedIds.add(linkedArrival.id);
          }
        } else if (!reservation.linked_id) {
          grouped.push(reservation);
          processedIds.add(reservation.id);
        }
      });
      
      return grouped;
    }
    
    // 공항 코드를 도시 이름으로 변환
    function getAirportName(code) {
      const airportNames = {
        'ICN': '인천',
        'GMP': '김포',
        'PUS': '부산',
        'CJU': '제주',
        'GUM': '괌'
      };
      return airportNames[code] || code;
    }
    
    // 날짜 포맷 (YYYY-MM-DD만 추출)
    function formatDate(dateStr) {
      if (!dateStr) return '';
      // ISO 형식이면 날짜만 추출
      if (dateStr.includes('T') || dateStr.includes('Z')) {
        return dateStr.split('T')[0];
      }
      return dateStr;
    }
    
    // 예약 카드 렌더링 (왕복 통합)
    function renderPickupCard(p) {
      const hasRoundtrip = p.arrival_record;
      
      // 예약 상태 배지 결정 (픽업 예약: 검수대기 → 확정 → 정산완료)
      const getReservationStatusBadge = (pickup) => {
        // 정산 완료
        if (pickup.status === 'settled' || pickup.settlement_status === 'completed') {
          return '<span class="badge bg-success" style="font-size: 0.85rem;">💰 정산완료</span>';
        }
        // 확정 (차량 배정 완료)
        if (pickup.vehicle_ready || pickup.status === 'confirmed' || pickup.status === 'pending_vehicle') {
          return '<span class="badge bg-primary" style="font-size: 0.85rem;">✅ 확정</span>';
        }
        // 검수 대기 (신규, pending, new)
        return '<span class="badge bg-warning" style="font-size: 0.85rem;">📋 검수대기</span>';
      };
      
      // 왕복 예약
      if (hasRoundtrip) {
        const arrival = p.arrival_record;
        const depAirport = p.departure_airport || 'GUM';
        const arrAirport = p.arrival_airport || 'ICN';
        const depCity = getAirportName(depAirport);
        const arrCity = getAirportName(arrAirport);
        
        return `
          <div class="pickup-card" style="border-left: 4px solid #9c27b0; background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%); box-shadow: 0 2px 6px rgba(156,39,176,0.2);">
            <div class="d-flex justify-content-between align-items-start mb-3">
              <div>
                <h5 class="mb-1" style="color: #9c27b0; font-size: 1.1rem;">
                  <i class="bi bi-airplane-engines"></i> <strong>${depCity}출발</strong>
                </h5>
                <div class="mt-2">
                  <span class="badge bg-secondary me-2">📅 ${formatDate(p.display_date)}</span>
                  <span class="badge bg-primary me-2">✈️ ${p.flight_number}</span>
                  <span class="badge bg-info">👤 ${p.customer_name}</span>
                </div>
              </div>
              ${getReservationStatusBadge(p)}
            </div>
            
            <!-- 출발편 -->
            <div class="alert alert-info mb-2 p-2" style="background: #e3f2fd; border-left: 3px solid #2196f3;">
              <strong style="color: #1976d2;">✈️ ${depCity}출발</strong><br>
              <small class="text-muted">
                📅 ${p.display_date} ${p.display_time}<br>
                🏨 ${p.hotel_name}<br>
                👥 ${p.passenger_count}명 (성인:${p.adult_count}, 소아:${p.child_count}, 유아:${p.infant_count})
              </small>
            </div>
            
            <!-- 도착편 -->
            <div class="alert alert-danger mb-2 p-2" style="background: #ffebee; border-left: 3px solid #f44336;">
              <strong style="color: #c62828;">🛬 ${arrCity}도착</strong><br>
              <small class="text-muted">
                📅 ${arrival.display_date} ${arrival.display_time}<br>
                🏨 ${arrival.hotel_name}<br>
                👥 ${arrival.passenger_count}명
              </small>
            </div>
            
            ${p.memo ? `<div class="text-muted small">📝 ${p.memo}</div>` : ''}
          </div>
        `;
      } 
      // 단독 예약
      else {
        const isArrival = p.record_type === 'arrival';
        const typeColor = isArrival ? '#f44336' : '#2196f3';
        const typeBg = isArrival ? '#ffebee' : '#e3f2fd';
        const typeIcon = isArrival ? '🛬' : '✈️';
        const depAirport = p.departure_airport || 'GUM';
        const arrAirport = p.arrival_airport || 'ICN';
        const depCity = getAirportName(depAirport);
        const arrCity = getAirportName(arrAirport);
        const typeLabel = isArrival ? `${arrCity}도착` : `${depCity}출발`;

        return `
          <div class="pickup-card" style="border-left: 4px solid ${typeColor}; background: ${typeBg};">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <h6 class="mb-1" style="color: ${typeColor};">${typeIcon} <strong>${typeLabel}</strong></h6>
                <div class="mt-1">
                  <span class="badge bg-secondary me-2">📅 ${formatDate(p.display_date)}</span>
                  <span class="badge bg-primary me-2">✈️ ${p.flight_number}</span>
                  <span class="badge bg-info">👤 ${p.customer_name}</span>
                </div>
              </div>
              ${getReservationStatusBadge(p)}
            </div>
            <div class="text-muted small">
              📅 ${p.display_date} ${p.display_time}<br>
              🏨 ${p.hotel_name}<br>
              👥 ${p.passenger_count}명 (성인:${p.adult_count}, 소아:${p.child_count}, 유아:${p.infant_count})<br>
              ${p.memo ? `📝 ${p.memo}` : ''}
            </div>
          </div>
        `;
      }
    }
  </script>
</body>
