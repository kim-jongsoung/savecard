    // ì˜ˆì•½ ë‚´ì—­ ì¡°íšŒ (í˜ì´ì§€ë„¤ì´ì…˜)
    let allPickups = []; // ì „ì²´ ì˜ˆì•½ ë°ì´í„°
    const itemsPerPage = 15;
    
    async function loadPickups(page = 1) {
      try {
        const searchDateFrom = document.getElementById('searchDateFrom').value;
        const searchDateTo = document.getElementById('searchDateTo').value;
        const searchName = document.getElementById('searchName').value;
        const searchStatus = document.getElementById('searchStatus').value;

        let url = `/pickup/api/agency-pickups?agency_id=${AGENCY_ID}`;
        if (searchDateFrom) url += `&dateFrom=${searchDateFrom}`;
        if (searchDateTo) url += `&dateTo=${searchDateTo}`;
        if (searchName) url += `&name=${encodeURIComponent(searchName)}`;
        if (searchStatus) url += `&status=${searchStatus}`;

        const res = await fetch(url);
        const pickups = await res.json();
        
        // ì™•ë³µ ì˜ˆì•½ ê·¸ë£¹í™”
        const groupedPickups = groupLinkedReservations(pickups);
        allPickups = groupedPickups;

        document.getElementById('totalCount').textContent = groupedPickups.length;

        if (groupedPickups.length === 0) {
          document.getElementById('pickupsList').innerHTML = `
