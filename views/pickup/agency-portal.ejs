  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery (Select2 의존성) -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- Select2 JS -->
  <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
  <script>
    const AGENCY_CODE = '<%= agencyCode %>';
    const AGENCY_ID = <%= agencyId %>;

    document.addEventListener('DOMContentLoaded', () => {
      loadFlights();
      loadPickups();
    });
    
    // 항공편 로드
    async function loadFlights() {
      try {
        const res = await fetch('/pickup/api/flights/all');
        const flights = await res.json();
        
        const flightSelect = document.getElementById('flightNumber');
        flightSelect.innerHTML = '<option value="">편명 선택</option>' + 
          flights.filter(f => f.is_active).map(f => {
            const depTime = f.departure_time?.substring(0, 5);
            const arrTime = f.arrival_time?.substring(0, 5);
            const route = `${f.departure_airport} → ${f.arrival_airport}`;
            return `<option value="${f.flight_number}">${f.flight_number} (${route} ${depTime} → ${arrTime})</option>`;
          }).join('');
        
        // Select2 초기화
        $('#flightNumber').select2({
          theme: 'bootstrap-5',
          placeholder: '편명을 입력하거나 선택하세요 (예: KE111)',
          allowClear: true,
          width: '100%',
          language: {
            noResults: function() {
              return "검색 결과가 없습니다";
            },
            searching: function() {
              return "검색 중...";
            }
          }
        });
      } catch (error) {
        console.error('❌ 항공편 로드 실패:', error);
        alert('항공편 정보를 불러올 수 없습니다.');
      }
    }

    // 예약 등록
    document.getElementById('pickupForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const data = {
        pickup_type: 'arrival',  // 업체 예약은 자동으로 왕복 처리
        flight_date: document.getElementById('flightDate').value,
        flight_number: document.getElementById('flightNumber').value.toUpperCase(),
        customer_name: document.getElementById('customerName').value,
        hotel_name: document.getElementById('hotelName').value,
        phone: document.getElementById('phone').value,
        kakao_id: document.getElementById('kakaoId').value,
        adult_count: parseInt(document.getElementById('adultCount').value) || 0,
        child_count: parseInt(document.getElementById('childCount').value) || 0,
        infant_count: parseInt(document.getElementById('infantCount').value) || 0,
        luggage_count: parseInt(document.getElementById('luggageCount').value) || 0,
        memo: document.getElementById('memo').value,
        agency_id: AGENCY_ID
      };

      try {
        const res = await fetch('/pickup/api/agency-register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await res.json();

        if (res.ok) {
          alert('✅ 예약이 등록되었습니다!');
          document.getElementById('pickupForm').reset();
          loadPickups();
          // 예약 내역 탭으로 전환
          document.getElementById('list-tab').click();
        } else {
          alert('❌ 등록 실패: ' + (result.error || '알 수 없는 오류'));
        }
      } catch (error) {
        console.error('등록 오류:', error);
        alert('❌ 등록 실패: ' + error.message);
      }
    });

    // 엔터키로 검색 실행
    function handleSearchEnter(event) {
      if (event.key === 'Enter') {
        event.preventDefault();
        loadPickups(1);
      }
    }
    
    // 예약 내역 조회 (페이지네이션)
    let allPickups = []; // 전체 예약 데이터
    const itemsPerPage = 15;
    
    async function loadPickups(page = 1) {
      try {
        const searchDateFrom = document.getElementById('searchDateFrom').value;
        const searchDateTo = document.getElementById('searchDateTo').value;
        const searchName = document.getElementById('searchName').value;
        const searchStatus = document.getElementById('searchStatus').value;

        let url = `/pickup/api/agency-pickups?agency_id=${AGENCY_ID}`;
        if (searchDateFrom) url += `&dateFrom=${searchDateFrom}`;
        if (searchDateTo) url += `&dateTo=${searchDateTo}`;
        if (searchName) url += `&name=${encodeURIComponent(searchName)}`;
        if (searchStatus) url += `&status=${searchStatus}`;

        const res = await fetch(url);
        const pickups = await res.json();
        
        // 왕복 예약 그룹화
        const groupedPickups = groupLinkedReservations(pickups);
        allPickups = groupedPickups;

        document.getElementById('totalCount').textContent = groupedPickups.length;

        if (groupedPickups.length === 0) {
          document.getElementById('pickupsList').innerHTML = `
            <div class="text-center text-muted py-5">
              <i class="bi bi-inbox" style="font-size: 3rem;"></i>
              <p class="mt-2">예약 내역이 없습니다</p>
            </div>
          `;
          document.getElementById('paginationNav').style.display = 'none';
          return;
        }

        // 페이지네이션 적용
        renderPage(page);

      } catch (error) {
        console.error('조회 오류:', error);
        document.getElementById('pickupsList').innerHTML = `
          <div class="alert alert-danger">
            조회 실패: ${error.message}
          </div>
        `;
      }
    }
    
    // 페이지 렌더링
    function renderPage(page) {
      const totalPages = Math.ceil(allPickups.length / itemsPerPage);
      const startIndex = (page - 1) * itemsPerPage;
      const endIndex = startIndex + itemsPerPage;
      const pagePickups = allPickups.slice(startIndex, endIndex);
      
      // 예약 카드 렌더링
      document.getElementById('pickupsList').innerHTML = pagePickups.map(p => renderPickupCard(p)).join('');
      
      // 페이지네이션 렌더링
      if (totalPages > 1) {
        renderPagination(page, totalPages);
        document.getElementById('paginationNav').style.display = 'block';
      } else {
        document.getElementById('paginationNav').style.display = 'none';
      }
    }
    
    // 페이지네이션 UI 렌더링
    function renderPagination(currentPage, totalPages) {
      const pagination = document.getElementById('pagination');
      let html = '';
      
      // 이전 버튼
      html += `
        <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
          <a class="page-link" href="#" onclick="loadPickupsPage(${currentPage - 1}); return false;">이전</a>
        </li>
      `;
      
      // 페이지 번호
      const maxVisible = 5;
      let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
      let endPage = Math.min(totalPages, startPage + maxVisible - 1);
      
      if (endPage - startPage < maxVisible - 1) {
        startPage = Math.max(1, endPage - maxVisible + 1);
      }
      
      if (startPage > 1) {
        html += `<li class="page-item"><a class="page-link" href="#" onclick="loadPickupsPage(1); return false;">1</a></li>`;
        if (startPage > 2) {
          html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
        }
      }
      
      for (let i = startPage; i <= endPage; i++) {
        html += `
          <li class="page-item ${i === currentPage ? 'active' : ''}">
            <a class="page-link" href="#" onclick="loadPickupsPage(${i}); return false;">${i}</a>
          </li>
        `;
      }
      
      if (endPage < totalPages) {
        if (endPage < totalPages - 1) {
          html += `<li class="page-item disabled"><span class="page-link">...</span></li>`;
        }
        html += `<li class="page-item"><a class="page-link" href="#" onclick="loadPickupsPage(${totalPages}); return false;">${totalPages}</a></li>`;
      }
      
      // 다음 버튼
      html += `
        <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
          <a class="page-link" href="#" onclick="loadPickupsPage(${currentPage + 1}); return false;">다음</a>
        </li>
      `;
      
      pagination.innerHTML = html;
    }
    
    // 페이지 이동
    function loadPickupsPage(page) {
      renderPage(page);
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    // 연결된 예약 그룹화 (출발+도착을 하나로)
    function groupLinkedReservations(reservations) {
      const grouped = [];
      const processedIds = new Set();
      
      reservations.forEach(reservation => {
        if (processedIds.has(reservation.id)) return;
        
        if (reservation.record_type === 'departure') {
          const linkedArrival = reservations.find(r => r.id === reservation.linked_id);
          reservation.arrival_record = linkedArrival;
          grouped.push(reservation);
          
          processedIds.add(reservation.id);
          if (linkedArrival) {
            processedIds.add(linkedArrival.id);
          }
        } else if (!reservation.linked_id) {
          grouped.push(reservation);
          processedIds.add(reservation.id);
        }
      });
      
      return grouped;
    }
    
    // 공항 코드를 도시 이름으로 변환
    function getAirportName(code) {
      const airportNames = {
        'ICN': '인천',
        'GMP': '김포',
        'PUS': '부산',
        'CJU': '제주',
        'GUM': '괌'
      };
      return airportNames[code] || code;
    }
    
    // 날짜 포맷 (YYYY-MM-DD만 추출)
    function formatDate(dateStr) {
      if (!dateStr) return '';
      // ISO 형식이면 날짜만 추출
      if (dateStr.includes('T') || dateStr.includes('Z')) {
        return dateStr.split('T')[0];
      }
      return dateStr;
    }
    
    // 예약 카드 렌더링 (출발편만 표시)
    function renderPickupCard(p) {
      // 예약 상태 배지 및 카드 스타일 결정
      const getReservationStatusBadge = (pickup) => {
        // 정산 완료 (settlement_status 또는 settlement_date 존재)
        if (pickup.status === 'settled' || pickup.settlement_status === 'completed' || pickup.settlement_date) {
          return '<span class="badge bg-success" style="font-size: 0.85rem;">💰 정산완료</span>';
        }
        // 확정 (관리자 확정 또는 차량 배정 완료)
        if (pickup.confirmation_status === 'confirmed' || pickup.vehicle_ready || pickup.status === 'confirmed' || pickup.status === 'pending_vehicle') {
          return '<span class="badge bg-primary" style="font-size: 0.85rem;">✅ 확정</span>';
        }
        // 검수 대기 (신규, pending, new)
        return '<span class="badge bg-warning" style="font-size: 0.85rem;">📋 검수대기</span>';
      };
      
      // 상태에 따른 카드 스타일 결정
      const getCardStyle = (pickup) => {
        // 정산 완료 - 녹색 (settlement_status 또는 settlement_date 존재)
        if (pickup.status === 'settled' || pickup.settlement_status === 'completed' || pickup.settlement_date) {
          return {
            borderColor: '#28a745',
            bgColor: '#d4edda',
            textColor: '#28a745'
          };
        }
        // 확정 - 파란색
        if (pickup.confirmation_status === 'confirmed' || pickup.vehicle_ready || pickup.status === 'confirmed' || pickup.status === 'pending_vehicle') {
          return {
            borderColor: '#2196f3',
            bgColor: '#e3f2fd',
            textColor: '#2196f3'
          };
        }
        // 검수 대기 - 노란색
        return {
          borderColor: '#ffc107',
          bgColor: '#fff3cd',
          textColor: '#856404'
        };
      };
      
      const depAirport = p.departure_airport || 'GUM';
      const depCity = getAirportName(depAirport);
      const cardStyle = getCardStyle(p);
      
      return `
        <div class="pickup-card" style="border-left: 4px solid ${cardStyle.borderColor}; background: ${cardStyle.bgColor};">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
              <h6 class="mb-1" style="color: ${cardStyle.textColor};">✈️ <strong>${depCity}출발</strong></h6>
              <div class="mt-1">
                <span class="badge bg-secondary me-2">📅 ${formatDate(p.display_date)}</span>
                <span class="badge bg-primary me-2">✈️ ${p.flight_number}</span>
                <span class="badge bg-info">👤 ${p.customer_name}</span>
              </div>
            </div>
            ${getReservationStatusBadge(p)}
          </div>
          <div class="text-muted small">
            📅 ${p.display_date} ${p.display_time}<br>
            🏨 ${p.hotel_name}<br>
            👥 ${p.passenger_count}명 (성인:${p.adult_count}, 소아:${p.child_count}, 유아:${p.infant_count})<br>
            🧳 ${p.luggage_count}개<br>
            ${p.phone ? `📞 ${p.phone}<br>` : ''}
            ${p.kakao_id ? `💬 ${p.kakao_id}<br>` : ''}
            ${p.memo ? `📝 ${p.memo}` : ''}
          </div>
        </div>
      `;
    }
    
    // 로그아웃 함수
    async function logout() {
      if (!confirm('로그아웃 하시겠습니까?')) return;
      
      try {
        await fetch('/pickup/api/agency-logout', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        
        // 로그인 페이지로 리다이렉트
        window.location.href = '/pickup/agency-login';
      } catch (error) {
        console.error('Logout error:', error);
        alert('로그아웃에 실패했습니다.');
      }
    }
  </script>
