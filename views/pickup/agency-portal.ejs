        } else {
          alert('âŒ ë“±ë¡ ì‹¤íŒ¨: ' + (result.error || 'ì•Œ ìˆ˜ ì—†ëŠ” ì˜¤ë¥˜'));
        }
      } catch (error) {
        console.error('ë“±ë¡ ì˜¤ë¥˜:', error);
        alert('âŒ ë“±ë¡ ì‹¤íŒ¨: ' + error.message);
      }
    });

    // ì—”í„°í‚¤ë¡œ ê²€ìƒ‰ ì‹¤í–‰
    function handleSearchEnter(event) {
