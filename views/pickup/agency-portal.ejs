          </div>
        `;
      }
    }
    
    // í˜ì´ì§€ ë Œë”ë§
    function renderPage(page) {
      const totalPages = Math.ceil(allPickups.length / itemsPerPage);
      const startIndex = (page - 1) * itemsPerPage;
      const endIndex = startIndex + itemsPerPage;
      const pagePickups = allPickups.slice(startIndex, endIndex);
      
