    <!-- 탭 -->
    <ul class="nav nav-tabs mb-3" id="portalTabs" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="new-tab" data-bs-toggle="tab" data-bs-target="#new" type="button">
          <i class="bi bi-plus-circle"></i> 새 예약 등록
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button">
          <i class="bi bi-list-ul"></i> 예약 내역 <span class="badge bg-primary" id="totalCount">0</span>
        </button>
      </li>
    </ul>

    <!-- 탭 내용 -->
    <div class="tab-content" id="portalTabContent">
      <!-- 새 예약 등록 -->
      <div class="tab-pane fade show active" id="new" role="tabpanel">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title mb-4"><i class="bi bi-plus-circle"></i> 새 픽업 예약 등록</h5>
            
            <form id="pickupForm">
              <!-- 항공편 정보 -->
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label">출발일 *</label>
                  <input type="date" class="form-control" id="flightDate" required>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label">편명 *</label>
