      const arrivalDateTime = new Date(arrivalMillis);
      
      // UTC ì‹œê°„ ì¶”ì¶œ (ë‚ ì§œ ê³„ì‚°ìš©)
      const utcHours = arrivalDateTime.getUTCHours();
      const utcDate = arrivalDateTime.getUTCDate();
