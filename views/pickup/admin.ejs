      if (hour >= 0 && hour < 6) {
        // ìƒˆë²½ ë¹„í–‰ê¸°
        const prevDay = new Date(flightDateTime);
        prevDay.setDate(prevDay.getDate() - 1);
        pickupDate = prevDay.toISOString().split('T')[0];
        pickupTime = '23:59';
        isEarly = true;
