              <option value="van" ${p.vehicle_type === 'van' ? 'selected' : ''}>ë°´</option>
              <option value="bus12" ${p.vehicle_type === 'bus12' ? 'selected' : ''}>12ì¸ìŠ¹</option>
            </select>
            <label class="ms-3">
