            '<p class="text-muted text-center">ì˜ˆì•½ ì—†ìŒ</p>';
        } else {
          const grouped = {};
          departures.forEach(p => {
            const key = `${p.hotel_pickup_time}`;
            if (!grouped[key]) grouped[key] = { flight: p, passengers: [] };
            grouped[key].passengers.push(p);
          });
          
