        } else {
          // ë¹„í–‰í¸ë³„ë¡œ ê·¸ë£¹í™”
          const grouped = {};
          arrivals.forEach(p => {
            const key = `${p.kr_flight_number}_${p.guam_arrival_time}`;
            if (!grouped[key]) grouped[key] = { flight: p, passengers: [] };
            grouped[key].passengers.push(p);
