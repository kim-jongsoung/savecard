    }
    
    // í˜¸í…” í”½ì—… ë Œë”ë§
    function renderDepartureFlight(group) {
      const p = group.flight;
      const passengers = group.passengers;
      const totalPax = passengers.reduce((sum, x) => sum + (x.passenger_count || 0), 0);
