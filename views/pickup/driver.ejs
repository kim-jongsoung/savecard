  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let currentDate = new Date().toISOString().split('T')[0];
    
    // í˜ì´ì§€ ë¡œë“œ
    document.addEventListener('DOMContentLoaded', () => {
