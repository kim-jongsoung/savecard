            // í‚¤ë³´ë“œ ë‹¨ì¶•í‚¤ ë°©ì§€ (ìŠ¤í¬ë¦°ìƒ·, ê°œë°œì ë„êµ¬ ë“±)
            document.addEventListener('keydown', function(e) {
                // F12 (ê°œë°œì ë„êµ¬)
                if (e.keyCode === 123) {
                    e.preventDefault();
                    showSecurityWarning();
                    return false;
                }
                
                // Ctrl+Shift+I (ê°œë°œì ë„êµ¬)
                if (e.ctrlKey && e.shiftKey && e.keyCode === 73) {
                    e.preventDefault();
                    showSecurityWarning();
                    return false;
                }
                
                // Ctrl+U (ì†ŒìŠ¤ ë³´ê¸°)
                if (e.ctrlKey && e.keyCode === 85) {
                    e.preventDefault();
                    showSecurityWarning();
                    return false;
                }
                
                // Ctrl+S (ì €ì¥)
                if (e.ctrlKey && e.keyCode === 83) {
                    e.preventDefault();
                    showSecurityWarning();
                    return false;
                }
                
                // Print Screen
                if (e.keyCode === 44) {
                    e.preventDefault();
                    showSecurityWarning();
                    return false;
                }
                
                // Alt+Print Screen
                if (e.altKey && e.keyCode === 44) {
                    e.preventDefault();
                    showSecurityWarning();
                    return false;
                }
            });
            
            // í˜ì´ì§€ ê°€ì‹œì„± ë³€ê²½ ê°ì§€ (ì•± ì „í™˜, ìŠ¤í¬ë¦°ìƒ· ë“±)
            document.addEventListener('visibilitychange', function() {
                if (document.hidden) {
                    // í˜ì´ì§€ê°€ ìˆ¨ê²¨ì§ˆ ë•Œ (ìŠ¤í¬ë¦°ìƒ· ê°€ëŠ¥ì„±)
                    setTimeout(() => {
                        if (!document.hidden) {
