                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>ì¸ì¦ ì¤‘...';
                    submitBtn.disabled = true;
                    
                    // ë¹„ë°€ë²ˆí˜¸ ì¸ì¦ API í˜¸ì¶œ (ê²½ë¡œ ìˆ˜ì •)
                    const response = await fetch('/verify-password', {
