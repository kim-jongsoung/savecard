        function copyLink() {
            const linkText = document.getElementById('cardLink').textContent;
            const btn = event.target.closest('button');
            const originalText = btn.innerHTML;
            
            // í˜„ëŒ€ì ì¸ Clipboard API ì‹œë„
            if (navigator.clipboard && window.isSecureContext) {
                navigator.clipboard.writeText(linkText).then(() => {
                    showCopySuccess(btn, originalText);
                }).catch(() => {
                    fallbackCopyTextToClipboard(linkText, btn, originalText);
                });
            } else {
                // Clipboard APIë¥¼ ì‚¬ìš©í•  ìˆ˜ ì—†ëŠ” ê²½ìš° fallback ì‚¬ìš©
                fallbackCopyTextToClipboard(linkText, btn, originalText);
            }
        }
        
        function fallbackCopyTextToClipboard(text, btn, originalText) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            
            // í™”ë©´ì—ì„œ ìˆ¨ê¸°ê¸°
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            
            textArea.focus();
            textArea.select();
            
            try {
                const successful = document.execCommand('copy');
                if (successful) {
                    showCopySuccess(btn, originalText);
                } else {
                    showCopyError();
                }
            } catch (err) {
                console.error('Fallback: Could not copy text: ', err);
                showCopyError();
            }
            
            document.body.removeChild(textArea);
        }
        
