                        // ì„±ê³µ ì• ë‹ˆë©”ì´ì…˜
                        setTimeout(() => {
                            const icon = document.querySelector('.success-icon');
                            if (icon) {
                                icon.style.animation = 'bounce 1s ease-in-out';
                            }
                        }, 500);
                    } else {
                        // ì¸ì¦ ì‹¤íŒ¨
                        showError(result.message || 'ë¹„ë°€ë²ˆí˜¸ê°€ ì¼ì¹˜í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.');
                        passwordInput.value = '';
                        passwordInput.focus();
                    }
                    
                } catch (error) {
                    console.error('ë¹„ë°€ë²ˆí˜¸ ì¸ì¦ ì˜¤ë¥˜:', error);
                    showError('ì¸ì¦ ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.');
                } finally {
                    // ë²„íŠ¼ ìƒíƒœ ë³µì›
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            });
            
            // ì˜¤ë¥˜ ë©”ì‹œì§€ í‘œì‹œ í•¨ìˆ˜
            function showError(message) {
                errorMessage.textContent = message;
                errorDiv.style.display = 'block';
                passwordInput.classList.add('is-invalid');
                
                setTimeout(() => {
                    errorDiv.style.display = 'none';
                    passwordInput.classList.remove('is-invalid');
                }, 5000);
            }
            
            // ë¹„ë°€ë²ˆí˜¸ ì…ë ¥ ì‹œ ì˜¤ë¥˜ ìˆ¨ê¸°ê¸°
            passwordInput.addEventListener('input', function() {
                if (errorDiv.style.display === 'block') {
