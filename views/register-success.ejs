                        window.setAuthenticated();
                        
                        // ì¹´ë“œ ë‚´ìš© í‘œì‹œ
                        cardContent.style.display = 'block';
                        
                        // ëª¨ë‹¬ ë‹«ê¸° (ì§€ì—° ì‹¤í–‰ìœ¼ë¡œ ì¹´ë“œ ë‚´ìš©ì´ ë¨¼ì € í‘œì‹œë˜ë„ë¡)
                        setTimeout(() => {
