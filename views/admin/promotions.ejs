<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>프로모션 관리 v2</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body { font-size: 0.85rem; }
    .promo-card { 
      border: 1px solid #dee2e6; 
      padding: 1rem; 
      margin-bottom: 1rem; 
      border-radius: 8px; 
      background: white; 
    }
    .promo-code { 
      font-size: 1.2rem; 
      font-weight: 700; 
      color: #667eea; 
    }
    .step-tabs { 
      border-bottom: 2px solid #e9ecef; 
      margin-bottom: 1.5rem; 
    }
    .step-tab { 
      padding: 0.75rem 1.5rem; 
      cursor: pointer; 
      border-bottom: 3px solid transparent; 
      display: inline-block; 
      margin-right: 1rem; 
    }
    .step-tab.active { 
      border-bottom-color: #667eea; 
      color: #667eea; 
      font-weight: 600; 
    }
    .step-content { 
      display: none; 
    }
    .step-content.active { 
      display: block; 
    }
    .calendar-grid { 
      display: grid; 
      grid-template-columns: repeat(7, 1fr); 
      gap: 5px; 
      margin-bottom: 2rem; 
    }
    .calendar-day { 
      border: 1px solid #dee2e6; 
      padding: 0.5rem; 
      text-align: center; 
      cursor: pointer; 
      background: white; 
      min-height: 80px; 
    }
    .calendar-day.selected { 
      background: #e3f2fd; 
      border-color: #2196f3; 
    }
    .calendar-day.has-rate { 
      background: #c8e6c9; 
    }
    .calendar-day:hover { 
      background: #f5f5f5; 
    }
    .calendar-header { 
      font-weight: 600; 
      background: #f8f9fa; 
      padding: 0.5rem; 
    }
    .rate-input-group { 
      margin-bottom: 1rem; 
      padding: 1rem; 
      border: 1px solid #dee2e6; 
      border-radius: 8px; 
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>
  
  <div class="container-fluid mt-4">
    <h2><i class="bi bi-tag-fill"></i> 프로모션 관리 v2
      <button class="btn btn-primary btn-sm ms-3" onclick="openNewPromo()">
        <i class="bi bi-plus-circle"></i> 신규 프로모션
      </button>
    </h2>
    
    <!-- 필터 -->
    <div class="card mt-3 mb-3">
      <div class="card-body">
        <div class="row g-2">
          <div class="col-md-3">
            <label class="form-label">호텔</label>
            <select class="form-select" id="filterHotel" onchange="loadPromos()">
              <option value="">전체</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">프로모션 코드</label>
            <input type="text" class="form-control" id="filterCode" placeholder="검색">
          </div>
          <div class="col-md-2">
            <label class="form-label">상태</label>
            <select class="form-select" id="filterActive" onchange="loadPromos()">
              <option value="" selected>전체</option>
              <option value="true">활성</option>
              <option value="false">비활성</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <button class="btn btn-primary w-100" onclick="loadPromos()">
              <i class="bi bi-search"></i> 검색
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 프로모션 목록 -->
    <div id="promoList"></div>
  </div>
  
  <!-- 프로모션 등록/수정 모달 -->
  <div class="modal fade" id="promoModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">신규 프로모션</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="currentPromoId">
          
          <!-- 단계별 탭 -->
          <div class="step-tabs">
            <div class="step-tab active" data-step="1" onclick="switchStep(1)">
              <i class="bi bi-1-circle"></i> 기본 정보
            </div>
            <div class="step-tab" data-step="2" onclick="switchStep(2)">
              <i class="bi bi-2-circle"></i> 날짜별 요금
            </div>
            <div class="step-tab" data-step="3" onclick="switchStep(3)">
              <i class="bi bi-3-circle"></i> 베네핏
            </div>
          </div>
          
          <!-- Step 1: 기본 정보 -->
          <div class="step-content active" data-step="1">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">호텔 *</label>
                <select class="form-select" id="hotelId" required>
                  <option value="">선택</option>
                </select>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">프로모션 코드 * <small class="text-muted">(예: SUMMER2025)</small></label>
                <input type="text" class="form-control" id="promoCode" required>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">프로모션명 *</label>
              <input type="text" class="form-control" id="promoName" placeholder="예: 여름 특가" required>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">예약 가능 시작일 *</label>
                <input type="date" class="form-control" id="bookingStartDate" required>
                <small class="text-muted">이 기간 내에만 신규 예약을 넣을 수 있습니다</small>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">예약 가능 종료일 *</label>
                <input type="date" class="form-control" id="bookingEndDate" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">투숙 가능 시작일 *</label>
                <input type="date" class="form-control" id="stayStartDate" required>
                <small class="text-muted">실제 투숙 가능한 기간</small>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">투숙 가능 종료일 *</label>
                <input type="date" class="form-control" id="stayEndDate" required>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">설명</label>
              <textarea class="form-control" id="description" rows="3"></textarea>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="isActive" checked>
              <label class="form-check-label">활성화</label>
            </div>
          </div>
          
          <!-- Step 2: 날짜별 요금 (별도 파일에서 로드) -->
          <div class="step-content" data-step="2">
            <%- include('./promotions-rates-ui') %>
          </div>
          
          <!-- Step 3: 베네핏 -->
          <div class="step-content" data-step="3">
            <button type="button" class="btn btn-sm btn-outline-primary mb-3" onclick="addBenefit()">
              <i class="bi bi-plus"></i> 베네핏 추가
            </button>
            <div id="benefitsList"></div>
          </div>
        </div>
        
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
          <button type="button" class="btn btn-primary" onclick="savePromotion()">
            <i class="bi bi-save"></i> 저장
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let hotels = [];
    let currentPromos = [];
    let currentStep = 1;
    let benefitCounter = 0;
    
    document.addEventListener('DOMContentLoaded', () => {
      loadHotels();
    });
    
    async function loadHotels() {
      const res = await fetch('/api/hotels?is_active=true');
      hotels = await res.json();
      
      const filterSelect = document.getElementById('filterHotel');
      const modalSelect = document.getElementById('hotelId');
      
      const options = hotels.map(h => `<option value="${h.id}">${h.hotel_name}</option>`).join('');
      filterSelect.innerHTML = '<option value="">전체</option>' + options;
      modalSelect.innerHTML = '<option value="">선택</option>' + options;
      
      loadPromos();
    }
    
    async function loadPromos() {
      let url = '/api/promotions?';
      const hotelId = document.getElementById('filterHotel').value;
      const code = document.getElementById('filterCode').value;
      const active = document.getElementById('filterActive').value;
      
      if (hotelId) url += `hotel_id=${hotelId}&`;
      if (code) url += `promo_code=${code}&`;
      if (active) url += `is_active=${active}`;
      
      const res = await fetch(url);
      currentPromos = await res.json();
      renderPromos();
    }
    
    function renderPromos() {
      const container = document.getElementById('promoList');
      
      if (currentPromos.length === 0) {
        container.innerHTML = '<div class="text-center py-5 text-muted">등록된 프로모션이 없습니다</div>';
        return;
      }
      
      let html = '';
      currentPromos.forEach(p => {
        html += `
          <div class="promo-card">
            <div class="d-flex justify-content-between align-items-start">
              <div class="flex-grow-1">
                <div class="promo-code">${p.promo_code}</div>
                <div class="mt-1"><strong>${p.promo_name}</strong></div>
                <div class="text-muted small">${p.hotel_name}</div>
                <div class="mt-2">
                  <span class="badge bg-primary">예약: ${p.booking_start_date} ~ ${p.booking_end_date}</span>
                  <span class="badge bg-success">투숙: ${p.stay_start_date} ~ ${p.stay_end_date}</span>
                  <span class="badge bg-info">${p.rate_count}개 요금</span>
                  <span class="badge bg-warning">${p.benefit_count}개 베네핏</span>
                  ${p.is_active ? '<span class="badge bg-success">활성</span>' : '<span class="badge bg-secondary">비활성</span>'}
                </div>
              </div>
              <div>
                <button class="btn btn-sm btn-outline-primary" onclick="editPromo(${p.id})">
                  <i class="bi bi-pencil"></i> 수정
                </button>
                <button class="btn btn-sm btn-outline-danger" onclick="deletePromo(${p.id})">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        `;
      });
      
      container.innerHTML = html;
    }
    
    function openNewPromo() {
      document.getElementById('currentPromoId').value = '';
      document.getElementById('modalTitle').textContent = '신규 프로모션';
      
      // 폼 초기화
      document.getElementById('hotelId').value = '';
      document.getElementById('promoCode').value = '';
      document.getElementById('promoName').value = '';
      document.getElementById('bookingStartDate').value = '';
      document.getElementById('bookingEndDate').value = '';
      document.getElementById('stayStartDate').value = '';
      document.getElementById('stayEndDate').value = '';
      document.getElementById('description').value = '';
      document.getElementById('isActive').checked = true;
      document.getElementById('benefitsList').innerHTML = '';
      
      benefitCounter = 0;
      currentStep = 1;
      switchStep(1);
      
      new bootstrap.Modal(document.getElementById('promoModal')).show();
    }
    
    async function editPromo(id) {
      const res = await fetch(`/api/promotions/${id}`);
      const promo = await res.json();
      
      document.getElementById('currentPromoId').value = promo.id;
      document.getElementById('modalTitle').textContent = '프로모션 수정';
      document.getElementById('hotelId').value = promo.hotel_id;
      document.getElementById('promoCode').value = promo.promo_code;
      document.getElementById('promoName').value = promo.promo_name;
      document.getElementById('bookingStartDate').value = promo.booking_start_date;
      document.getElementById('bookingEndDate').value = promo.booking_end_date;
      document.getElementById('stayStartDate').value = promo.stay_start_date;
      document.getElementById('stayEndDate').value = promo.stay_end_date;
      document.getElementById('description').value = promo.description || '';
      document.getElementById('isActive').checked = promo.is_active;
      
      // 베네핏 로드
      document.getElementById('benefitsList').innerHTML = '';
      benefitCounter = 0;
      if (promo.benefits && promo.benefits.length > 0) {
        promo.benefits.forEach(b => {
          addBenefit();
          const lastId = benefitCounter - 1;
          const row = document.getElementById(`benefit-${lastId}`);
          row.querySelector('.benefit-type').value = b.benefit_type;
          row.querySelector('.benefit-name').value = b.benefit_name;
          row.querySelector('.benefit-value').value = b.benefit_value || '';
        });
      }
      
      currentStep = 1;
      switchStep(1);
      
      new bootstrap.Modal(document.getElementById('promoModal')).show();
      
      // 요금 데이터 로드 (Step 2에서 사용)
      if (typeof loadPromoRates === 'function') {
        loadPromoRates(id);
      }
    }
    
    function switchStep(step) {
      currentStep = step;
      
      // 탭 활성화
      document.querySelectorAll('.step-tab').forEach(tab => {
        tab.classList.toggle('active', parseInt(tab.dataset.step) === step);
      });
      
      // 콘텐츠 표시
      document.querySelectorAll('.step-content').forEach(content => {
        content.classList.toggle('active', parseInt(content.dataset.step) === step);
      });
    }
    
    function addBenefit() {
      const id = benefitCounter++;
      const html = `
        <div class="card mb-2" id="benefit-${id}">
          <div class="card-body">
            <div class="row g-2">
              <div class="col-md-3">
                <select class="form-select benefit-type">
                  <option value="late_checkout">레이트체크아웃</option>
                  <option value="breakfast">조식</option>
                  <option value="drink_coupon">음료쿠폰</option>
                  <option value="upgrade">업그레이드</option>
                  <option value="credit">크레딧</option>
                  <option value="other">기타</option>
                </select>
              </div>
              <div class="col-md-4">
                <input type="text" class="form-control benefit-name" placeholder="베네핏명 (예: 레이트체크아웃 2시)">
              </div>
              <div class="col-md-3">
                <input type="text" class="form-control benefit-value" placeholder="값 (예: 14:00)">
              </div>
              <div class="col-md-2">
                <button type="button" class="btn btn-danger w-100" onclick="document.getElementById('benefit-${id}').remove()">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      `;
      document.getElementById('benefitsList').insertAdjacentHTML('beforeend', html);
    }
    
    async function savePromotion() {
      const id = document.getElementById('currentPromoId').value;
      
      // 기본 정보
      const data = {
        hotel_id: document.getElementById('hotelId').value,
        promo_code: document.getElementById('promoCode').value,
        promo_name: document.getElementById('promoName').value,
        booking_start_date: document.getElementById('bookingStartDate').value,
        booking_end_date: document.getElementById('bookingEndDate').value,
        stay_start_date: document.getElementById('stayStartDate').value,
        stay_end_date: document.getElementById('stayEndDate').value,
        description: document.getElementById('description').value,
        is_active: document.getElementById('isActive').checked
      };
      
      if (!data.hotel_id || !data.promo_code || !data.promo_name) {
        alert('필수 항목을 입력하세요');
        return;
      }
      
      if (!data.booking_start_date || !data.booking_end_date || !data.stay_start_date || !data.stay_end_date) {
        alert('예약 기간과 투숙 기간을 모두 입력하세요');
        return;
      }
      
      try {
        // 1. 프로모션 저장
        const url = id ? `/api/promotions/${id}` : '/api/promotions';
        const method = id ? 'PUT' : 'POST';
        
        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        
        const result = await res.json();
        if (result.error) {
          alert('저장 실패: ' + result.error);
          return;
        }
        
        const promoId = result.promotion.id;
        
        // 2. 베네핏 저장
        const benefits = [];
        document.querySelectorAll('[id^="benefit-"]').forEach(row => {
          const name = row.querySelector('.benefit-name').value;
          if (name) {
            benefits.push({
              benefit_type: row.querySelector('.benefit-type').value,
              benefit_name: name,
              benefit_value: row.querySelector('.benefit-value').value || null
            });
          }
        });
        
        if (benefits.length > 0) {
          await fetch(`/api/promotions/${promoId}/benefits`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ benefits })
          });
        }
        
        // 3. 요금 저장 (Step 2에서 정의된 함수)
        if (typeof savePromoRates === 'function') {
          await savePromoRates(promoId);
        }
        
        alert('저장되었습니다');
        bootstrap.Modal.getInstance(document.getElementById('promoModal')).hide();
        
        // 필터 초기화하고 전체 목록 다시 로드
        document.getElementById('filterActive').value = '';
        loadPromos();
        
      } catch (error) {
        console.error('저장 오류:', error);
        alert('저장 중 오류가 발생했습니다');
      }
    }
    
    async function deletePromo(id) {
      if (!confirm('프로모션을 삭제하시겠습니까?')) return;
      
      const res = await fetch(`/api/promotions/${id}`, { method: 'DELETE' });
      const result = await res.json();
      
      if (result.error) {
        alert('삭제 실패: ' + result.error);
        return;
      }
      
      alert('삭제되었습니다');
      loadPromos();
    }
  </script>
</body>
</html>
