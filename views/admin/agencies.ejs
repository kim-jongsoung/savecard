<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - 괌세이브카드</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .navbar {
            background: linear-gradient(45deg, #667eea, #764ba2) !important;
        }
        
        .content-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
            margin-bottom: 20px;
        }
        
        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 10px;
        }
        
        .table {
            border-radius: 10px;
            overflow: hidden;
        }
        
        .form-control, .form-select {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <!-- 네비게이션 -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin">
                <i class="fas fa-shield-alt me-2"></i>괌세이브카드 관리자
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin">대시보드</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/agencies">여행사 관리</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/users">고객 관리</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/stores">제휴업체 관리</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/usages">사용 이력</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/banners">광고 관리</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/partner-applications">제휴업체 신청</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/issue-codes">
                            <i class="fas fa-ticket-alt me-2"></i>발급 코드 관리
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/reservations">
                            <i class="fas fa-calendar-check me-2"></i>예약 관리
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i><%= adminUsername %>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/admin/logout">로그아웃</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2><i class="fas fa-building me-2"></i><%= title %></h2>
                <p class="text-muted">여행사 정보를 관리합니다</p>
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAgencyModal">
                <i class="fas fa-plus me-2"></i>여행사 추가
            </button>
        </div>

        <!-- 알림 메시지 -->
        <% if (success) { %>
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error) { %>
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- 여행사 목록 -->
        <div class="content-card">
            <h5><i class="fas fa-list me-2"></i>등록된 여행사 목록</h5>
            
            <% if (agencies && agencies.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>순위</th>
                                <th>여행사명</th>
                                <th>코드</th>
                                <th>로고</th>
                                <th>전용 랜딩 페이지</th>
                                <th>연락처</th>
                                <th>발급된 카드</th>
                                <th>등록일</th>
                                <th>액션</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% agencies.forEach((agency, index) => { %>
                                <tr data-agency-id="<%= agency.id %>">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-secondary me-2"><%= agency.sort_order || (index + 1) %></span>
                                            <div class="btn-group-vertical" role="group">
                                                <button class="btn btn-sm btn-outline-primary" onclick="moveAgency(<%= agency.id %>, 'up')" title="위로 이동">
                                                    <i class="fas fa-chevron-up"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-primary" onclick="moveAgency(<%= agency.id %>, 'down')" title="아래로 이동">
                                                    <i class="fas fa-chevron-down"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="agency-name"><strong><%= agency.name %></strong></td>
                                    <td class="agency-code"><code><%= agency.agency_code || agency.code %></code></td>
                                    <td class="agency-logo">
                                        <% if (agency.logo_url) { %>
                                            <img src="<%= agency.logo_url %>" alt="<%= agency.name %> 로고" 
                                                 style="max-width: 50px; max-height: 30px; object-fit: contain;" 
                                                 class="rounded">
                                        <% } else { %>
                                            <span class="text-muted">
                                                <i class="fas fa-image"></i> 없음
                                            </span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column gap-1">
                                            <div class="input-group input-group-sm">
                                                <input type="text" class="form-control form-control-sm" 
                                                       value="<%= typeof baseUrl !== 'undefined' ? baseUrl : window.location.origin %>/partner/<%= agency.agency_code || agency.code %>" 
                                                       readonly id="landingUrl_<%= agency.id %>">
                                                <button class="btn btn-outline-secondary btn-sm" type="button" 
                                                        onclick="copyLandingUrl('<%= agency.id %>')" title="URL 복사">
                                                    <i class="fas fa-copy"></i>
                                                </button>
                                            </div>
                                            <a href="/partner/<%= agency.agency_code || agency.code %>" target="_blank" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt me-1"></i>미리보기
                                            </a>
                                        </div>
                                    </td>
                                    <td class="agency-contact">
                                        <% if (agency.contact_email) { %>
                                            <div><i class="fas fa-envelope me-1"></i><%= agency.contact_email %></div>
                                        <% } %>
                                        <% if (agency.contact_phone) { %>
                                            <div><i class="fas fa-phone me-1"></i><%= agency.contact_phone %></div>
                                        <% } %>
                                        <% if (!agency.contact_email && !agency.contact_phone) { %>
                                            <span class="text-muted">-</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary"><%= agency.card_count || 0 %>개</span>
                                    </td>
                                    <td><%= new Date(agency.created_at).toLocaleDateString('ko-KR') %></td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-outline-success" onclick="editAgency(<%= agency.id %>)" title="수정">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" onclick="deleteAgency(<%= agency.id %>)" title="삭제">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center text-muted py-5">
                    <i class="fas fa-building fa-3x mb-3"></i>
                    <p>등록된 여행사가 없습니다.</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAgencyModal">
                        첫 번째 여행사 추가하기
                    </button>
                </div>
            <% } %>
        </div>
    </div>

    <!-- 여행사 추가 모달 -->
    <div class="modal fade" id="addAgencyModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus me-2"></i>새 여행사 추가
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="addAgencyForm" method="POST" action="/admin/agencies">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="name" class="form-label">여행사명 *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="agency_code" class="form-label">여행사 코드 *</label>
                            <input type="text" class="form-control" id="agency_code" name="agency_code" 
                                   placeholder="예: GUAM001" required>
                            <div class="form-text">고유한 영문/숫자 조합으로 입력하세요</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="logo_url" class="form-label">로고 이미지 URL</label>
                            <input type="url" class="form-control" id="logo_url" name="logo_url" 
                                   placeholder="https://example.com/logo.png">
                            <div class="form-text">여행사 로고 이미지의 URL을 입력하세요 (선택사항)</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="contact_email" class="form-label">이메일</label>
                            <input type="email" class="form-control" id="contact_email" name="contact_email">
                        </div>
                        
                        <div class="mb-3">
                            <label for="contact_phone" class="form-label">전화번호</label>
                            <input type="tel" class="form-control" id="contact_phone" name="contact_phone">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                        <button type="submit" class="btn btn-primary">추가</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- 여행사 수정 모달 -->
    <div class="modal fade" id="editAgencyModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="editAgencyForm">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-edit me-2"></i>여행사 정보 수정
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="editAgencyId" name="agencyId">
                        
                        <div class="mb-3">
                            <label for="editName" class="form-label">여행사명 *</label>
                            <input type="text" class="form-control" id="editName" name="name" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="editAgencyCode" class="form-label">여행사 코드 *</label>
                            <input type="text" class="form-control" id="editAgencyCode" name="agency_code" required>
                            <div class="form-text">고유한 영문/숫자 조합으로 입력하세요</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="editLogoUrl" class="form-label">로고 이미지 URL</label>
                            <input type="url" class="form-control" id="editLogoUrl" name="logo_url" 
                                   placeholder="https://example.com/logo.png">
                            <div class="form-text">여행사 로고 이미지의 URL을 입력하세요 (선택사항)</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="editContactEmail" class="form-label">이메일</label>
                            <input type="email" class="form-control" id="editContactEmail" name="contact_email">
                        </div>
                        
                        <div class="mb-3">
                            <label for="editContactPhone" class="form-label">전화번호</label>
                            <input type="tel" class="form-control" id="editContactPhone" name="contact_phone">
                        </div>

                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="editShowBanners">
                            <label class="form-check-label" for="editShowBanners">랜딩 페이지에 배너 노출</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                        <button type="submit" class="btn btn-success">수정</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 여행사 삭제 함수
        async function deleteAgency(agencyId) {
            console.log(`삭제 요청 시작: agencyId = ${agencyId}`);
            
            try {
                const url = `/admin/agencies/${agencyId}`;
                console.log(`요청 URL: ${url}`);
                
                const response = await fetch(url, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin'
                });

                console.log(`응답 상태: ${response.status} ${response.statusText}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                console.log('서버 응답:', result);
                
                if (result.success) {
                    alert('여행사가 성공적으로 삭제되었습니다.');
                    location.reload();
                } else if (result.hasUsers) {
                    // 연결된 사용자가 있는 경우 확인 후 강제 삭제 옵션 제공
                    if (confirm(result.message + '\n\n계속 진행하시겠습니까?')) {
                        await forceDeleteAgency(agencyId);
                    }
                } else {
                    alert('오류: ' + result.message);
                }
            } catch (error) {
                console.error('삭제 요청 오류:', error);
                alert('삭제 중 오류가 발생했습니다: ' + error.message);
            }
        }

        async function forceDeleteAgency(agencyId) {
            try {
                const url = `/admin/agencies/${agencyId}/force`;
                
                const response = await fetch(url, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin'
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    location.reload();
                } else {
                    alert('오류: ' + result.message);
                }
            } catch (error) {
                console.error('강제 삭제 요청 오류:', error);
                alert('강제 삭제 중 오류가 발생했습니다: ' + error.message);
            }
        }

        // 여행사 수정 함수
        async function editAgency(agencyId) {
            try {
                // 기존 여행사 정보 가져오기
                const response = await fetch(`/admin/agencies/${agencyId}`, {
                    credentials: 'same-origin'
                });
                const result = await response.json();
                
                if (result.success) {
                    const agency = result.agency;
                    
                    // 모달 폼에 데이터 채우기
                    document.getElementById('editAgencyId').value = agency.id;
                    document.getElementById('editName').value = agency.name;
                    document.getElementById('editAgencyCode').value = agency.agency_code || agency.code;
                    document.getElementById('editLogoUrl').value = agency.logo_url || '';
                    document.getElementById('editContactEmail').value = agency.contact_email || '';
                    document.getElementById('editContactPhone').value = agency.contact_phone || '';
                    document.getElementById('editShowBanners').checked = (agency.show_banners_on_landing !== false);
                    
                    // 모달 열기
                    const modal = new bootstrap.Modal(document.getElementById('editAgencyModal'));
                    modal.show();
                } else {
                    alert('여행사 정보를 가져올 수 없습니다.');
                }
            } catch (error) {
                console.error('여행사 정보 조회 오류:', error);
                alert('정보 조회 중 오류가 발생했습니다.');
            }
        }

        // 여행사 순위 이동 함수
        async function moveAgency(agencyId, direction) {
            try {
                const response = await fetch(`/admin/agencies/${agencyId}/move`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify({ direction })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    location.reload();
                } else {
                    alert(result.message || '순위 조정에 실패했습니다.');
                }
            } catch (error) {
                console.error('순위 조정 오류:', error);
                alert('순위 조정 중 오류가 발생했습니다.');
            }
        }

        // 여행사 수정 폼 제출 처리
        document.getElementById('editAgencyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const agencyId = formData.get('agencyId');
            
            const data = {
                name: formData.get('name'),
                agency_code: formData.get('agency_code'),
                contact_email: formData.get('contact_email'),
                contact_phone: formData.get('contact_phone'),
                logo_url: formData.get('logo_url')
            };
            
            try {
                const response = await fetch(`/admin/agencies/${agencyId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message || '여행사 정보가 성공적으로 수정되었습니다.');
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editAgencyModal'));
                    modal.hide();
                    
                    // 페이지 새로고침 없이 테이블 행만 업데이트
                    updateAgencyRow(agencyId, {
                        name: formData.get('name'),
                        agency_code: formData.get('agency_code'),
                        contact_email: formData.get('contact_email'),
                        contact_phone: formData.get('contact_phone'),
                        logo_url: formData.get('logo_url')
                    });
                } else {
                    alert('오류: ' + result.message);
                }
            } catch (error) {
                console.error('여행사 수정 오류:', error);
                alert('수정 중 오류가 발생했습니다.');
            }
        });

        // 전용 랜딩 페이지 URL 복사 기능
        function copyLandingUrl(agencyId) {
            const urlInput = document.getElementById(`landingUrl_${agencyId}`);
            urlInput.select();
            urlInput.setSelectionRange(0, 99999); // 모바일 지원
            
            try {
                document.execCommand('copy');
                
                // 성공 피드백
                const button = event.target.closest('button');
                const originalIcon = button.innerHTML;
                button.innerHTML = '<i class="fas fa-check"></i>';
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-success');
                
                setTimeout(() => {
                    button.innerHTML = originalIcon;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 1500);
                
            } catch (err) {
                console.error('URL 복사 실패:', err);
                alert('URL 복사에 실패했습니다. 수동으로 복사해주세요.');
            }
        }



        // 테이블 행 동적 업데이트 함수 (페이지 새로고침 방지)
        function updateAgencyRow(agencyId, updatedData) {
            const row = document.querySelector(`tr[data-agency-id="${agencyId}"]`);
            if (!row) {
                console.log('해당 여행사 행을 찾을 수 없습니다. 페이지를 새로고침합니다.');
                location.reload();
                return;
            }

            // 로고 업데이트
            const logoCell = row.querySelector('.agency-logo img');
            if (logoCell && updatedData.logo_url) {
                logoCell.src = updatedData.logo_url;
            }

            // 여행사명 업데이트
            const nameCell = row.querySelector('.agency-name');
            if (nameCell) {
                nameCell.textContent = updatedData.name;
            }

            // 여행사 코드 업데이트
            const codeCell = row.querySelector('.agency-code');
            if (codeCell) {
                codeCell.textContent = updatedData.agency_code || updatedData.code;
            }

            // 연락처 정보 업데이트
            const contactCell = row.querySelector('.agency-contact');
            if (contactCell) {
                let contactHtml = '';
                if (updatedData.contact_email) {
                    contactHtml += `<div><i class="fas fa-envelope me-1"></i>${updatedData.contact_email}</div>`;
                }
                if (updatedData.contact_phone) {
                    contactHtml += `<div><i class="fas fa-phone me-1"></i>${updatedData.contact_phone}</div>`;
                }
                if (!contactHtml) {
                    contactHtml = '<span class="text-muted">-</span>';
                }
                contactCell.innerHTML = contactHtml;
            }

            // 전용 랜딩 페이지 URL 업데이트
            const landingUrlInput = row.querySelector(`input[id^="landingUrl_"]`);
            if (landingUrlInput) {
                landingUrlInput.value = `${window.location.origin}/partner/${updatedData.agency_code || updatedData.code}`;
            }

            console.log('여행사 정보가 동적으로 업데이트되었습니다.');
        }

        // 여행사 순위 조정 함수
        async function moveAgency(agencyId, direction) {
            try {
                const response = await fetch(`/admin/agencies/${agencyId}/move`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ direction })
                });

                const result = await response.json();
                
                if (result.success) {
                    // 성공 시 페이지 새로고침하여 변경된 순위 반영
                    location.reload();
                } else {
                    alert(result.message || '순위 조정 중 오류가 발생했습니다.');
                }
            } catch (error) {
                console.error('순위 조정 오류:', error);
                alert('순위 조정 중 오류가 발생했습니다.');
            }
        }

        // 여행사 추가 폼 제출 처리 (AJAX로 변경하여 JSON 응답 숨기기)
        document.getElementById('addAgencyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = {
                name: formData.get('name'),
                agency_code: formData.get('agency_code'),
                contact_email: formData.get('contact_email'),
                contact_phone: formData.get('contact_phone'),
                logo_url: formData.get('logo_url')
            };

            try {
                const response = await fetch('/admin/agencies', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    // 성공 시 모달 닫기 및 페이지 새로고침
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addAgencyModal'));
                    modal.hide();
                    location.reload();
                } else {
                    const result = await response.json();
                    alert(result.message || '여행사 추가 중 오류가 발생했습니다.');
                }
            } catch (error) {
                console.error('여행사 추가 오류:', error);
                alert('여행사 추가 중 오류가 발생했습니다.');
            }
        });
    </script>
