                            loadPriceRagDocuments();
                        } else {
                            showAlert(result.message || `요금 정보 ${editId ? '수정' : '등록'}에 실패했습니다.`, 'danger');
                        }
                    } catch (error) {
                        console.error('❌ 요금 RAG 등록/수정 실패:', error);
                        showAlert('요금 정보 저장 중 오류가 발생했습니다.', 'danger');
                    }
                });
            }
            
            // 요금 RAG 탭 클릭 시 문서 로드
            const ragTab = document.getElementById('rag-tab');
            if (ragTab) {
                ragTab.addEventListener('shown.bs.tab', function() {
                    loadPriceRagDocuments();
                });
            }
            
            // 검색 입력 시 실시간 검색
            const searchInput = document.getElementById('priceSearchInput');
            if (searchInput) {
                let searchTimeout;
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(() => {
                        loadPriceRagDocuments();
                    }, 500);
                });
            }
        });
