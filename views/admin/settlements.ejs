                        const response = await fetch(url, {
                            method: method,
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(formData)
                        });
                        
                        const result = await response.json();
                        
                        if (result.success) {
                            showAlert(`✅ 요금 정보가 ${editId ? '수정' : '등록'}되었습니다.`, 'success');
