        // 정산 수정 모달 계산 함수
        function calculateEditSettlement() {
            // 인원수 가져오기 (숨겨진 필드나 예약 정보에서 가져와야 함)
            // 여기서는 간단히 1로 설정 (실제로는 예약 정보에서 가져와야 함)
            const adultCount = 1;
            const childCount = 0;
            const infantCount = 0;
            
            // 거래액 계산
            const saleCurrency = document.getElementById('edit-sale-currency').value;
            const saleAdult = parseFloat(document.getElementById('edit-sale-adult').value) || 0;
            const saleChild = parseFloat(document.getElementById('edit-sale-child').value) || 0;
            const saleInfant = parseFloat(document.getElementById('edit-sale-infant').value) || 0;
            const totalSale = Math.round((saleAdult * adultCount) + (saleChild * childCount) + (saleInfant * infantCount));
            
            const commissionRate = parseFloat(document.getElementById('edit-commission-rate').value) || 0;
            const commissionAmount = Math.round(totalSale * (commissionRate / 100));
            const netRevenue = Math.round(totalSale - commissionAmount);
            
            document.getElementById('edit-total-sale').value = totalSale;
            document.getElementById('edit-commission-amount').value = commissionAmount;
            document.getElementById('edit-net-revenue').value = netRevenue;
            
            // 매입액 계산
            const costCurrency = document.getElementById('edit-cost-currency').value;
            const costAdult = parseFloat(document.getElementById('edit-cost-adult').value) || 0;
            const costChild = parseFloat(document.getElementById('edit-cost-child').value) || 0;
            const costInfant = parseFloat(document.getElementById('edit-cost-infant').value) || 0;
            const totalCost = Math.round((costAdult * adultCount) + (costChild * childCount) + (costInfant * infantCount));
            
            document.getElementById('edit-total-cost').value = totalCost;
            
            // 환율 및 마진 계산
            const exchangeRate = parseFloat(document.getElementById('edit-exchange-rate').value) || 1330;
            
            // 원화 환산
            const revenueKRW = saleCurrency === 'KRW' ? netRevenue : Math.round(netRevenue * exchangeRate);
            const costKRW = costCurrency === 'KRW' ? totalCost : Math.round(totalCost * exchangeRate);
            
            const marginKRW = Math.round(revenueKRW - costKRW);
            const marginRate = revenueKRW > 0 ? ((marginKRW / revenueKRW) * 100).toFixed(2) : 0;
            
            document.getElementById('edit-cost-krw').value = costKRW;
            document.getElementById('edit-margin-krw').value = marginKRW;
            document.getElementById('edit-margin-rate').value = marginRate;
        }
        
