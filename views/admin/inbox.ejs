            if (infantCount > 0) formula.push(`유아 ${infantCount}명×$${infantPrice}`);
            
            const formulaText = formula.length > 0 ? formula.join(' + ') + ` = $${totalAmount.toFixed(2)}` : '';
            document.getElementById('calculation_formula').value = formulaText;
        }

