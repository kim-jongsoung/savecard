                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteProductRule(1, '롱혼스테이크')" title="삭제">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr data-rule-id="2">
                                            <td><code>롱혼</code></td>
                                            <td><span class="badge bg-info">확정</span></td>
                                            <td>수배 불필요</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteProductRule(2, '롱혼')" title="삭제">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr data-rule-id="3">
                                            <td><code>레스토랑</code></td>
                                            <td><span class="badge bg-info">확정</span></td>
                                            <td>수배 불필요</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteProductRule(3, '레스토랑')" title="삭제">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr data-rule-id="4">
                                            <td><code>식당</code></td>
                                            <td><span class="badge bg-info">확정</span></td>
                                            <td>수배 불필요</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteProductRule(4, '식당')" title="삭제">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <tr data-rule-id="5">
                                            <td><code>카페</code></td>
                                            <td><span class="badge bg-info">확정</span></td>
                                            <td>수배 불필요</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-danger" onclick="deleteProductRule(5, '카페')" title="삭제">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
