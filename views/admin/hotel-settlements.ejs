<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>호텔 정산관리 - 괌세이브카드</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .table td { vertical-align: middle; }
        .clickable-row { cursor: pointer; }
        .clickable-row:hover { background-color: #f8f9fa; }
        .filter-section { background: #f8f9fa; padding: 1rem; border-radius: 8px; margin-bottom: 1rem; }
        .status-badge { font-size: 0.75rem; padding: 0.25rem 0.5rem; border-radius: 4px; }
        .status-complete { background: #28a745; color: white; }
        .status-incomplete { background: #ffc107; color: #000; }
    </style>
</head>
<body>
    <!-- 네비게이션 -->
    <%- include('../partials/navbar', { currentPage: 'hotel-settlements', adminUsername: adminUsername || '관리자' }) %>

    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-calculator me-2"></i>호텔 정산관리</h2>
        </div>

        <!-- 필터링 섹션 -->
        <div class="filter-section">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">기간</label>
                    <div class="input-group input-group-sm">
                        <input type="date" class="form-control" id="startDate">
                        <span class="input-group-text">~</span>
                        <input type="date" class="form-control" id="endDate">
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label">예약업체</label>
                    <select class="form-select form-select-sm" id="filterAgency">
                        <option value="">전체</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">호텔</label>
                    <select class="form-select form-select-sm" id="filterHotel">
                        <option value="">전체</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">고객명</label>
                    <input type="text" class="form-control form-control-sm" id="filterGuest" placeholder="고객명 검색">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button class="btn btn-primary btn-sm me-2" onclick="loadSettlements()">
                        <i class="fas fa-search me-1"></i>검색
                    </button>
                    <button class="btn btn-secondary btn-sm" onclick="resetFilters()">
                        <i class="fas fa-redo me-1"></i>초기화
                    </button>
                </div>
            </div>
        </div>

        <!-- 탭 -->
        <ul class="nav nav-tabs mb-3" id="settlementTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="incomplete-tab" data-bs-toggle="tab" data-bs-target="#incomplete" 
                        type="button" role="tab" onclick="switchTab('incomplete')">
                    미완료 <span class="badge bg-warning text-dark" id="incompleteCount">0</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="complete-tab" data-bs-toggle="tab" data-bs-target="#complete" 
                        type="button" role="tab" onclick="switchTab('complete')">
                    완료 <span class="badge bg-success" id="completeCount">0</span>
                </button>
            </li>
        </ul>

        <!-- 일괄 처리 버튼 (미완료 탭에만 표시) -->
        <div id="bulkActions" class="mb-3" style="display: none;">
            <button class="btn btn-success btn-sm" onclick="bulkPayment('received')">
                <i class="fas fa-arrow-down me-1"></i>선택 항목 일괄 입금
            </button>
            <button class="btn btn-danger btn-sm" onclick="bulkPayment('sent')">
                <i class="fas fa-arrow-up me-1"></i>선택 항목 일괄 송금
            </button>
            <button class="btn btn-outline-secondary btn-sm" onclick="clearSelection()">
                <i class="fas fa-times me-1"></i>선택 해제
            </button>
        </div>

        <!-- 탭 컨텐츠 -->
        <div class="tab-content" id="settlementTabContent">
            <!-- 미완료 탭 -->
            <div class="tab-pane fade show active" id="incomplete" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-hover table-sm">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" class="form-check-input" id="selectAll" onchange="toggleSelectAll()">
                                </th>
                                <th>체크인</th>
                                <th>호텔명</th>
                                <th>예약업체</th>
                                <th>투숙객명</th>
                                <th class="text-end" colspan="2">거래액</th>
                                <th class="text-end" colspan="2">호텔매입</th>
                                <th class="text-end" colspan="2">아웃호텔</th>
                                <th class="text-end" colspan="2">수배피</th>
                                <th class="text-end">마진</th>
                                <th class="text-end">부가세</th>
                                <th class="text-center">입금</th>
                                <th class="text-center">송금</th>
                            </tr>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="incompleteList">
                            <tr>
                                <td colspan="17" class="text-center py-5">
                                    <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                                    <p class="mt-2 text-muted">데이터를 불러오는 중...</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- 완료 탭 -->
            <div class="tab-pane fade" id="complete" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-hover table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>체크인</th>
                                <th>호텔명</th>
                                <th>예약업체</th>
                                <th>투숙객명</th>
                                <th class="text-end" colspan="2">거래액</th>
                                <th class="text-end" colspan="2">호텔매입</th>
                                <th class="text-end" colspan="2">아웃호텔</th>
                                <th class="text-end" colspan="2">수배피</th>
                                <th class="text-end">마진</th>
                                <th class="text-end">부가세</th>
                                <th class="text-center">입금일</th>
                                <th class="text-center">송금일</th>
                            </tr>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th class="text-end" style="font-size: 0.75rem;">USD</th>
                                <th class="text-end" style="font-size: 0.75rem;">KRW</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="completeList">
                            <tr>
                                <td colspan="16" class="text-center py-5">
                                    <i class="fas fa-spinner fa-spin fa-2x text-muted"></i>
                                    <p class="mt-2 text-muted">데이터를 불러오는 중...</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- 모달은 수배관리 페이지에서 사용 -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentTab = 'incomplete';
        let selectedIds = new Set();

        // 페이지 로드 시
        document.addEventListener('DOMContentLoaded', function() {
            // 기본 날짜 설정 (이번 달)
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            document.getElementById('startDate').valueAsDate = firstDay;
            document.getElementById('endDate').valueAsDate = today;

            // 필터 옵션 로드
            loadFilterOptions();
            
            // 정산 목록 로드
            loadSettlements();
        });

        // 필터 옵션 로드
        async function loadFilterOptions() {
            try {
                // 예약업체 목록
                const agencyRes = await fetch('/api/hotel-reservations/agencies');
                if (!agencyRes.ok) {
                    console.error('예약업체 목록 로드 실패:', agencyRes.status);
                    return;
                }
                const agencies = await agencyRes.json();
                const agencySelect = document.getElementById('filterAgency');
                if (Array.isArray(agencies)) {
                    agencies.forEach(agency => {
                        const option = document.createElement('option');
                        option.value = agency.agency_name;
                        option.textContent = agency.agency_name;
                        agencySelect.appendChild(option);
                    });
                }

                // 호텔 목록
                const hotelRes = await fetch('/api/hotel-reservations/hotels');
                if (!hotelRes.ok) {
                    console.error('호텔 목록 로드 실패:', hotelRes.status);
                    return;
                }
                const hotels = await hotelRes.json();
                const hotelSelect = document.getElementById('filterHotel');
                if (Array.isArray(hotels)) {
                    hotels.forEach(hotel => {
                        const option = document.createElement('option');
                        option.value = hotel.hotel_name;
                        option.textContent = hotel.hotel_name;
                        hotelSelect.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('필터 옵션 로드 실패:', error);
            }
        }

        // 정산 목록 로드
        async function loadSettlements() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            const agency = document.getElementById('filterAgency').value;
            const hotel = document.getElementById('filterHotel').value;
            const guest = document.getElementById('filterGuest').value;

            const params = new URLSearchParams({
                status: currentTab === 'incomplete' ? 'incomplete' : 'completed',
                start_date: startDate,
                end_date: endDate
            });

            if (agency) params.append('agency', agency);
            if (hotel) params.append('hotel', hotel);
            if (guest) params.append('guest', guest);

            try {
                const response = await fetch(`/api/hotel-settlements/list?${params}`);
                const data = await response.json();

                if (data.success) {
                    renderSettlements(data.data);
                    updateCounts(data.counts);
                } else {
                    alert('데이터 로드 실패: ' + data.message);
                }
            } catch (error) {
                console.error('정산 목록 로드 실패:', error);
                alert('정산 목록을 불러오는데 실패했습니다.');
            }
        }

        // 정산 목록 렌더링
        function renderSettlements(settlements) {
            const listId = currentTab === 'incomplete' ? 'incompleteList' : 'completeList';
            const tbody = document.getElementById(listId);

            if (!settlements || settlements.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="${currentTab === 'incomplete' ? 17 : 16}" class="text-center py-5">
                            <i class="fas fa-inbox fa-2x text-muted"></i>
                            <p class="mt-2 text-muted">정산 데이터가 없습니다</p>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = settlements.map(s => {
                const sellingPriceUSD = parseFloat(s.total_selling_price || 0);
                const costPriceUSD = parseFloat(s.total_cost_price || 0);
                const outHotelCostUSD = parseFloat(s.out_hotel_cost || 0);
                const agencyFeeUSD = parseFloat(s.agency_fee || 0);
                
                const settlementRate = parseFloat(s.exchange_rate || 1470);
                const remittanceRate = parseFloat(s.remittance_rate || settlementRate);
                
                const isPaymentSent = !!s.payment_sent_date;
                const displayRate = isPaymentSent ? remittanceRate : settlementRate;
                
                const sellingPriceKRW = Math.round(sellingPriceUSD * settlementRate);
                const costPriceKRW = Math.round(costPriceUSD * displayRate);
                const outHotelCostKRW = Math.round(outHotelCostUSD * displayRate);
                const agencyFeeKRW = Math.round(agencyFeeUSD * settlementRate);
                
                const marginKRW = sellingPriceKRW - costPriceKRW - outHotelCostKRW;
                const tax = Math.round(marginKRW * 0.1);

                const checkInDate = s.check_in_date ? new Date(s.check_in_date).toLocaleDateString('ko-KR') : '-';
                const paymentReceivedDate = s.payment_received_date ? new Date(s.payment_received_date).toLocaleDateString('ko-KR') : '-';
                const paymentSentDate = s.payment_sent_date ? new Date(s.payment_sent_date).toLocaleDateString('ko-KR') : '-';

                if (currentTab === 'incomplete') {
                    return `
                        <tr class="clickable-row" onclick="openReservationModal(${s.id})">
                            <td onclick="event.stopPropagation()">
                                <input type="checkbox" class="form-check-input" value="${s.id}" 
                                       onchange="toggleSelection(${s.id})">
                            </td>
                            <td>${checkInDate}</td>
                            <td>${s.hotel_name || '-'}</td>
                            <td>${s.booking_agency_name || '-'}</td>
                            <td>${s.guest_name || '-'}</td>
                            <td class="text-end">$${sellingPriceUSD.toFixed(2)}</td>
                            <td class="text-end">₩${sellingPriceKRW.toLocaleString()}<br><small class="text-muted">(×${settlementRate.toFixed(2)})</small></td>
                            <td class="text-end">$${costPriceUSD.toFixed(2)}</td>
                            <td class="text-end">₩${costPriceKRW.toLocaleString()}<br><small class="text-muted">(×${displayRate.toFixed(2)})</small></td>
                            <td class="text-end">$${outHotelCostUSD.toFixed(2)}</td>
                            <td class="text-end">₩${outHotelCostKRW.toLocaleString()}<br><small class="text-muted">(×${displayRate.toFixed(2)})</small></td>
                            <td class="text-end">$${agencyFeeUSD.toFixed(2)}</td>
                            <td class="text-end">₩${agencyFeeKRW.toLocaleString()}<br><small class="text-muted">(×${settlementRate.toFixed(2)})</small></td>
                            <td class="text-end ${marginKRW >= 0 ? 'text-primary' : 'text-danger'}">₩${marginKRW.toLocaleString()}</td>
                            <td class="text-end">₩${tax.toLocaleString()}</td>
                            <td class="text-center">${s.payment_received_date ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-muted"></i>'}</td>
                            <td class="text-center">${s.payment_sent_date ? '<i class="fas fa-check text-success"></i>' : '<i class="fas fa-times text-muted"></i>'}</td>
                        </tr>
                    `;
                } else {
                    return `
                        <tr class="clickable-row" onclick="openReservationModal(${s.id})">
                            <td>${checkInDate}</td>
                            <td>${s.hotel_name || '-'}</td>
                            <td>${s.booking_agency_name || '-'}</td>
                            <td>${s.guest_name || '-'}</td>
                            <td class="text-end">$${sellingPriceUSD.toFixed(2)}</td>
                            <td class="text-end">₩${sellingPriceKRW.toLocaleString()}<br><small class="text-muted">(×${settlementRate.toFixed(2)})</small></td>
                            <td class="text-end">$${costPriceUSD.toFixed(2)}</td>
                            <td class="text-end">₩${costPriceKRW.toLocaleString()}<br><small class="text-muted">(×${displayRate.toFixed(2)})</small></td>
                            <td class="text-end">$${outHotelCostUSD.toFixed(2)}</td>
                            <td class="text-end">₩${outHotelCostKRW.toLocaleString()}<br><small class="text-muted">(×${displayRate.toFixed(2)})</small></td>
                            <td class="text-end">$${agencyFeeUSD.toFixed(2)}</td>
                            <td class="text-end">₩${agencyFeeKRW.toLocaleString()}<br><small class="text-muted">(×${settlementRate.toFixed(2)})</small></td>
                            <td class="text-end ${marginKRW >= 0 ? 'text-primary' : 'text-danger'}">₩${marginKRW.toLocaleString()}</td>
                            <td class="text-end">₩${tax.toLocaleString()}</td>
                            <td class="text-center">${paymentReceivedDate}</td>
                            <td class="text-center">${paymentSentDate}</td>
                        </tr>
                    `;
                }
            }).join('');
        }

        // 카운트 업데이트
        function updateCounts(counts) {
            document.getElementById('incompleteCount').textContent = counts.incomplete || 0;
            document.getElementById('completeCount').textContent = counts.completed || 0;
        }

        // 탭 전환
        function switchTab(tab) {
            currentTab = tab;
            document.getElementById('bulkActions').style.display = tab === 'incomplete' ? 'block' : 'none';
            clearSelection();
            loadSettlements();
        }

        // 체크박스 선택
        function toggleSelection(id) {
            if (selectedIds.has(id)) {
                selectedIds.delete(id);
            } else {
                selectedIds.add(id);
            }
        }

        // 전체 선택
        function toggleSelectAll() {
            const checkboxes = document.querySelectorAll('#incompleteList input[type="checkbox"]');
            const selectAll = document.getElementById('selectAll').checked;
            
            checkboxes.forEach(cb => {
                cb.checked = selectAll;
                const id = parseInt(cb.value);
                if (selectAll) {
                    selectedIds.add(id);
                } else {
                    selectedIds.delete(id);
                }
            });
        }

        // 선택 해제
        function clearSelection() {
            selectedIds.clear();
            document.getElementById('selectAll').checked = false;
            document.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
        }

        // 일괄 입금/송금 처리
        async function bulkPayment(type) {
            if (selectedIds.size === 0) {
                alert('처리할 항목을 선택해주세요.');
                return;
            }

            const typeText = type === 'received' ? '입금' : '송금';
            const today = new Date().toISOString().split('T')[0];
            const date = prompt(`${typeText} 날짜를 입력하세요 (YYYY-MM-DD):`, today);
            
            if (!date) return;

            let exchangeRate = null;
            if (type === 'sent') {
                const rateInput = prompt('송금 환율을 입력하세요 (예: 1450):', '1450');
                if (!rateInput) return;
                exchangeRate = parseFloat(rateInput);
                if (isNaN(exchangeRate) || exchangeRate <= 0) {
                    alert('올바른 환율을 입력해주세요.');
                    return;
                }
            }

            if (!confirm(`선택한 ${selectedIds.size}개 항목을 ${typeText} 처리하시겠습니까?`)) {
                return;
            }

            try {
                const response = await fetch('/api/settlements/bulk-payment', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        settlement_ids: Array.from(selectedIds),
                        type: type,
                        date: date,
                        exchange_rate: exchangeRate
                    })
                });

                const result = await response.json();

                if (result.success) {
                    alert(`✅ ${selectedIds.size}개 항목의 ${typeText} 처리가 완료되었습니다.`);
                    clearSelection();
                    loadSettlements();
                } else {
                    alert(`❌ ${typeText} 처리 실패: ` + result.message);
                }
            } catch (error) {
                console.error('일괄 처리 실패:', error);
                alert(`일괄 ${typeText} 처리 중 오류가 발생했습니다.`);
            }
        }

        // 필터 초기화
        function resetFilters() {
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            document.getElementById('startDate').valueAsDate = firstDay;
            document.getElementById('endDate').valueAsDate = today;
            document.getElementById('filterAgency').value = '';
            document.getElementById('filterHotel').value = '';
            document.getElementById('filterGuest').value = '';
            loadSettlements();
        }

        // 예약 상세 보기 (수배관리 페이지로 이동)
        function openReservationModal(reservationId) {
            // 수배관리 페이지로 이동하면서 자동으로 모달 열기
            window.location.href = `/admin/hotel-assignments?open=${reservationId}`;
        }
    </script>
</body>
</html>
