            if (childCount > 0) {
                const childDisplay = childCurrency === 'USD' ? 
                    `$${childPrice.toFixed(2)}` : `₩${Math.round(childPrice).toLocaleString('ko-KR')}`;
                formula.push(`소아${childCount}×${childDisplay}`);
