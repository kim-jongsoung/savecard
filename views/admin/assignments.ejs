                        <td style="font-size: 0.7rem; font-weight: 600;">${truncate(reservation.korean_name || '-', 8)}</td>
                        <td style="font-size: 0.7rem; font-weight: 600;">${truncate(reservation.platform_name || '-', 8)}</td>
                        <td>
                            <span class="badge bg-info" style="font-size: 0.2rem; padding: 1px 2px;">${truncate(reservation.assigned_to || '미지정', 5)}</span>
                        </td>
                        <td style="text-align: left; font-size: 0.65rem;" title="${reservation.product_name || '-'}">${truncate(reservation.product_name || '-', 25)}</td>
                        <td style="font-size: 0.7rem;">${truncate(reservation.package_type || '-', 15)}</td>
                        <td style="font-size: 0.7rem;">${truncate(reservation.vendor_name || '미지정', 10)}</td>
                        <td style="font-size: 0.65rem;">
                            <span class="badge bg-primary" style="font-size: 0.18rem; padding: 1px 2px;">성${reservation.people_adult || 0}</span>
                            <span class="badge bg-success" style="font-size: 0.18rem; padding: 1px 2px;">아${reservation.people_child || 0}</span>
                            <span class="badge bg-secondary" style="font-size: 0.18rem; padding: 1px 2px;">유${reservation.people_infant || 0}</span>
                        </td>
                        <td style="padding: 2px;">
                            <span class="badge bg-${bootstrapClass}" style="font-size: 0.39rem; padding: 1px 3px;">${statusText}</span>
                            ${statusBadges}
                            ${isUsageDatePassed && reservation.payment_status === 'confirmed' ? '<br><span class="badge bg-info mt-1" style="font-size: 0.36rem; padding: 1px 3px;">정산대기</span>' : ''}
                            ${reservation.payment_status === 'settlement_completed' ? '<br><span class="badge bg-dark mt-1" style="font-size: 0.36rem; padding: 1px 3px;">정산완료</span>' : ''}
                        </td>
