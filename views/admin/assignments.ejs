        let currentSearch = '';

        // 최신 USD 환율 가져오기 (인박스와 동일)
        async function fetchLatestExchangeRate() {
            try {
                const response = await fetch('/api/exchange-rates?currency=USD');
                const result = await response.json();
                
                if (result.success && result.data && result.data.length > 0) {
                    window.latestExchangeRate = result.data[0].rate;
                    console.log('💱 최신 USD 환율:', window.latestExchangeRate);
                } else {
                    window.latestExchangeRate = 1300; // 기본값
                    console.warn('⚠️ 환율 조회 실패, 기본값 사용:', window.latestExchangeRate);
                }
            } catch (error) {
                console.error('환율 조회 오류:', error);
                window.latestExchangeRate = 1300; // 기본값
            }
        }

        // 페이지 로드 시 초기화
        document.addEventListener('DOMContentLoaded', function() {
            // 최신 환율 가져오기
            fetchLatestExchangeRate();
            
            loadAssignments();
            
            // ✅ 모든 모달에 닫힘 이벤트 리스너 추가 (자동 새로고침)
            setupModalRefreshListeners();
            
            // ✅ 예약확정 모달 초기화 이벤트
            const statusManageModal = document.getElementById('statusManageModal');
            if (statusManageModal) {
