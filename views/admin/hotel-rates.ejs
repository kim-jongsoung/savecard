    }
    
    // ì‹œì¦Œ ìˆ˜ì •
    async function editSeason(id) {
      try {
        const res = await fetch(`/api/seasons/${id}`);
        const s = await res.json();
        
        document.getElementById('modalTitle').textContent = 'ì‹œì¦Œ ìˆ˜ì •';
        document.getElementById('seasonId').value = s.id;
