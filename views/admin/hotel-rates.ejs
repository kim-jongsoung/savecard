    // ì—°ë„ í•„í„° ì´ˆê¸°í™”
    function initYearFilter() {
      const yearSelect = document.getElementById('filterYear');
      const currentYear = new Date().getFullYear();
      for (let i = -1; i <= 2; i++) {
        const year = currentYear + i;
        const option = document.createElement('option');
        option.value = year;
        option.textContent = year + 'ë…„';
        if (i === 0) option.selected = true;
        yearSelect.appendChild(option);
      }
    }
    
    // í˜¸í…” ëª©ë¡ ë¡œë“œ
    async function loadHotels() {
      try {
        const res = await fetch('/api/hotels?is_active=true');
        hotels = await res.json();
        
        const filterSelect = document.getElementById('filterHotel');
        const modalSelect = document.getElementById('hotelId');
        
        hotels.forEach(h => {
          filterSelect.innerHTML += `<option value="${h.id}">${h.hotel_name}</option>`;
          modalSelect.innerHTML += `<option value="${h.id}">${h.hotel_name}</option>`;
        });
      } catch (error) {
        console.error('í˜¸í…” ë¡œë“œ ì‹¤íŒ¨:', error);
      }
    }
    
    // ì‹œì¦Œ ëª©ë¡ ë¡œë“œ
    async function loadSeasons() {
      try {
        const hotelId = document.getElementById('filterHotel').value;
        const year = document.getElementById('filterYear').value;
        const isActive = document.getElementById('filterActive').value;
        
        let url = '/api/seasons?';
        if (hotelId) url += `hotel_id=${hotelId}&`;
        if (isActive) url += `is_active=${isActive}&`;
        
        const res = await fetch(url);
        currentSeasons = await res.json();
        
        // ì—°ë„ í•„í„°ë§ (í´ë¼ì´ì–¸íŠ¸)
        if (year) {
          currentSeasons = currentSeasons.filter(s => {
            const startYear = new Date(s.start_date).getFullYear();
            const endYear = new Date(s.end_date).getFullYear();
            return startYear == year || endYear == year;
          });
        }
        
        renderSeasons();
      } catch (error) {
        console.error('ì‹œì¦Œ ë¡œë“œ ì‹¤íŒ¨:', error);
        alert('ì‹œì¦Œ ëª©ë¡ ì¡°íšŒ ì‹¤íŒ¨: ' + error.message);
      }
    }
    
    // ì‹œì¦Œ ë Œë”ë§
    function renderSeasons() {
      const container = document.getElementById('seasonList');
      const emptyState = document.getElementById('emptyState');
      const viewMode = document.getElementById('viewMode').value;
      
      if (currentSeasons.length === 0) {
        container.innerHTML = '';
        emptyState.style.display = 'block';
        return;
      }
      
      emptyState.style.display = 'none';
      
      if (viewMode === 'card') {
        renderCardView(container);
      } else {
        renderTimelineView(container);
      }
    }
    
    // ì¹´ë“œ ë·° ë Œë”ë§
    function renderCardView(container) {
      // í˜¸í…”ë³„ë¡œ ê·¸ë£¹í™”
      const byHotel = {};
      currentSeasons.forEach(s => {
        if (!byHotel[s.hotel_id]) byHotel[s.hotel_id] = [];
        byHotel[s.hotel_id].push(s);
      });
      
      let html = '';
      for (const hotelId in byHotel) {
        const seasons = byHotel[hotelId];
        const hotelName = seasons[0].hotel_name;
        
        html += `<div class="mb-4">
          <h5 class="mb-3"><i class="bi bi-building"></i> ${hotelName}</h5>`;
        
        // ìš°ì„ ìˆœìœ„ ìˆœìœ¼ë¡œ ì •ë ¬
        seasons.sort((a, b) => b.priority - a.priority);
        
        seasons.forEach(s => {
          const priorityClass = s.priority >= 7 ? 'priority-high' : (s.priority >= 4 ? 'priority-medium' : 'priority-low');
          const statusBadge = s.is_active 
            ? '<span class="badge bg-success">í™œì„±</span>' 
            : '<span class="badge bg-secondary">ë¹„í™œì„±</span>';
          
          html += `<div class="season-card">
            <div class="season-header">
              <div class="d-flex align-items-center gap-2">
                <span class="season-priority ${priorityClass}">${s.priority}</span>
                <strong>${s.season_name}</strong>
                ${s.season_code ? `<span class="badge bg-primary">${s.season_code}</span>` : ''}
                ${statusBadge}
              </div>
              <div>
                <button class="btn btn-sm btn-outline-primary" onclick="editSeason(${s.id})">
                  <i class="bi bi-pencil"></i> ìˆ˜ì •
                </button>
                <button class="btn btn-sm btn-outline-danger" onclick="deleteSeason(${s.id})">
                  <i class="bi bi-trash"></i> ì‚­ì œ
                </button>
              </div>
            </div>
            <div class="season-dates">
              <i class="bi bi-calendar-event"></i> ${formatDate(s.start_date)} ~ ${formatDate(s.end_date)}
              <span class="text-muted ms-2">(${getDaysDiff(s.start_date, s.end_date)}ì¼)</span>
            </div>
            ${s.description ? `<div class="text-muted" style="font-size: 0.7rem;">${s.description}</div>` : ''}
          </div>`;
        });
        
        html += `</div>`;
      }
      
      container.innerHTML = html;
    }
    
    // íƒ€ì„ë¼ì¸ ë·° ë Œë”ë§
    function renderTimelineView(container) {
      // ì‹œì‘ì¼ ìˆœìœ¼ë¡œ ì •ë ¬
      const sorted = [...currentSeasons].sort((a, b) => 
        new Date(a.start_date) - new Date(b.start_date)
      );
      
      let html = '<div class="timeline-container">';
      sorted.forEach(s => {
        const statusBadge = s.is_active 
          ? '<span class="badge bg-success">í™œì„±</span>' 
          : '<span class="badge bg-secondary">ë¹„í™œì„±</span>';
        
        html += `<div class="timeline-item">
          <div class="timeline-date">
            ${formatDate(s.start_date)} ~ ${formatDate(s.end_date)}
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <strong>${s.season_name}</strong>
              <span class="ms-2">${s.hotel_name}</span>
              ${s.season_code ? `<span class="badge bg-primary ms-2">${s.season_code}</span>` : ''}
              <span class="ms-2">${statusBadge}</span>
              <span class="ms-2 badge bg-dark">ìš°ì„ ìˆœìœ„: ${s.priority}</span>
            </div>
            <div>
              <button class="btn btn-sm btn-outline-primary" onclick="editSeason(${s.id})">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger" onclick="deleteSeason(${s.id})">
                <i class="bi bi-trash"></i>
              </button>
            </div>
          </div>
          ${s.description ? `<div class="text-muted mt-2" style="font-size: 0.7rem;">${s.description}</div>` : ''}
        </div>`;
      });
      html += '</div>';
      
      container.innerHTML = html;
    }
    
    // ë‚ ì§œ í¬ë§·
    function formatDate(dateStr) {
      const d = new Date(dateStr);
      return `${d.getFullYear()}.${String(d.getMonth() + 1).padStart(2, '0')}.${String(d.getDate()).padStart(2, '0')}`;
    }
    
    // ë‚ ì§œ ì°¨ì´ ê³„ì‚°
    function getDaysDiff(start, end) {
      const d1 = new Date(start);
      const d2 = new Date(end);
      return Math.ceil((d2 - d1) / (1000 * 60 * 60 * 24)) + 1;
    }
    
    // ì‹œì¦Œ ë“±ë¡ ëª¨ë‹¬ ì—´ê¸°
    function openAddModal() {
      document.getElementById('modalTitle').textContent = 'ì‹œì¦Œ ë“±ë¡';
      document.getElementById('seasonForm').reset();
