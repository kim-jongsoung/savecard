    <script>
        let reservations = [];
        let filteredReservations = [];

        // í˜ì´ì§€ ë¡œë“œì‹œ ì˜ˆì•½ ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
        document.addEventListener('DOMContentLoaded', function() {
