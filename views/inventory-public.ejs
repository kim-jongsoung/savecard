  <script>
    let hotels = [];
    let roomTypes = [];
    let inventory = {};
    let highlighted = new Set();
    let currentHotel = null;
    let currentWeekStart = 0;
    let priceRoomTypes = [];
    let promotions = [];

    async function loadHotels() {
      const res = await fetch('/api/hotels?is_active=true');
      hotels = await res.json();
      
      const select = document.getElementById('hotelSelect');
      const priceSelect = document.getElementById('priceHotelSelect');
      
      hotels.forEach(h => {
        const opt1 = document.createElement('option');
        opt1.value = h.id;
        opt1.textContent = h.hotel_name;
        select.appendChild(opt1);
        
        const opt2 = document.createElement('option');
        opt2.value = h.id;
        opt2.textContent = h.hotel_name;
        priceSelect.appendChild(opt2);
      });

      const now = new Date();
      document.getElementById('startMonth').value = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}`;
      
      const today = new Date();
      document.getElementById('priceCheckIn').value = today.toISOString().split('T')[0];
      
      const tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      document.getElementById('priceCheckOut').value = tomorrow.toISOString().split('T')[0];
    }

    async function loadData() {
      const hid = document.getElementById('hotelSelect').value;
      if (!hid) return;

      currentHotel = hotels.find(h => h.id == hid);
      loadNotices();
      
      const rtRes = await fetch(`/api/room-types?hotel_id=${hid}&is_active=true&visible_in_inventory=true`);
      roomTypes = await rtRes.json();

      const start = document.getElementById('startMonth').value.split('-');
      const year = parseInt(start[0]), month = parseInt(start[1]);
      inventory = {};
      let latestUpdate = null;
      
      for (let m = 0; m < 6; m++) {
        const y = month + m > 12 ? year + 1 : year;
        const mo = month + m > 12 ? month + m - 12 : month + m;
        const res = await fetch(`/api/inventory/public?hotel_id=${hid}&year=${y}&month=${mo}`);
        
        if (!res.ok) {
          console.error(`HTTP error: ${res.status}`);
          return;
        }
        
        const data = await res.json();
        
        if (data.error || !Array.isArray(data)) {
          console.error('Data error:', data);
          return;
        }
        
        data.forEach(inv => {
          const dateOnly = inv.availability_date.split('T')[0];
          const key = `${inv.room_type_id}-${dateOnly}`;
          
          if (currentHotel.inventory_type === 'count') {
            inventory[key] = inv.available_rooms;
          } else {
            inventory[key] = inv.available_rooms === 0 ? 'X' : (inv.available_rooms > 0 ? 'O' : '');
          }
          
          if (inv.notes === 'HIGHLIGHT') {
            highlighted.add(key);
          }
          
          if (inv.updated_at) {
            const updateTime = new Date(inv.updated_at);
            if (!latestUpdate || updateTime > latestUpdate) {
              latestUpdate = updateTime;
            }
          }
        });
      }
      
      if (latestUpdate) {
        const year = latestUpdate.getFullYear();
        const month = String(latestUpdate.getMonth() + 1).padStart(2, '0');
        const day = String(latestUpdate.getDate()).padStart(2, '0');
        const hour = String(latestUpdate.getHours()).padStart(2, '0');
        const minute = String(latestUpdate.getMinutes()).padStart(2, '0');
        
        document.getElementById('lastUpdateTime').textContent = `${year}/${month}/${day} ${hour}:${minute}`;
        document.getElementById('lastUpdateInfo').style.display = 'block';
      } else {
        document.getElementById('lastUpdateInfo').style.display = 'none';
      }
      
      renderInventory(year, month);
      renderMobileInventory(year, month);
    }

    function renderInventory(year, month) {
      const container = document.getElementById('inventoryContainer');
      let html = '';
      
      for (let m = 0; m < 6; m++) {
        const y = month + m > 12 ? year + 1 : year;
        const mo = month + m > 12 ? month + m - 12 : month + m;
        const monthName = new Date(y, mo - 1).toLocaleString('ko', { year: 'numeric', month: 'long' });
        const days = new Date(y, mo, 0).getDate();
        
        html += `<div class="month-section">
          <div class="month-title">${monthName}</div>
          <table class="avail-table"><thead><tr><th class="rt">ê°ì‹¤ íƒ€ì…</th>`;
        for (let d = 1; d <= days; d++) html += `<th>${d}</th>`;
        html += `</tr></thead><tbody>`;
        
        roomTypes.forEach(rt => {
          html += `<tr><td class="rt">${rt.room_type_name}</td>`;
          for (let d = 1; d <= days; d++) {
            const date = `${y}-${String(mo).padStart(2,'0')}-${String(d).padStart(2,'0')}`;
            const key = `${rt.id}-${date}`;
            const val = inventory[key] || '';
            
            let cellClass = '';
            let display = '-';
            if (val) {
              if (currentHotel.inventory_type === 'count') {
                const num = parseInt(val);
                if (num >= 5) {
                  cellClass = 'cell-available';
                  display = val;
                } else if (num > 0) {
                  cellClass = 'cell-limited';
                  display = val;
                } else {
                  cellClass = 'cell-closed';
                  display = 'X';
                }
              } else {
                if (val === 'O') {
                  cellClass = 'cell-available';
                  display = 'O';
                } else if (val === 'X') {
                  cellClass = 'cell-closed';
                  display = 'X';
                } else {
                  cellClass = 'cell-limited';
                  display = val;
                }
              }
            }
            
            if (highlighted.has(key)) {
              cellClass += ' cell-highlighted';
            }
            
            html += `<td class="${cellClass}">${display}</td>`;
          }
          html += `</tr>`;
        });
        
        html += `</tbody></table></div>`;
      }
      
      container.innerHTML = html;
    }
    
    function renderMobileInventory(year, month) {
      const container = document.getElementById('mobileInventoryContainer');
      const today = new Date();
      const startDate = new Date(today);
      startDate.setDate(startDate.getDate() + (currentWeekStart * 7));
      
      let html = `
        <div class="week-selector">
          <button onclick="changeWeek(-1)" ${currentWeekStart <= 0 ? 'disabled' : ''}>â—€ ì´ì „</button>
          <span>${startDate.getMonth() + 1}ì›” ${startDate.getDate()}ì¼ ì£¼ê°„</span>
          <button onclick="changeWeek(1)">ë‹¤ìŒ â–¶</button>
        </div>
      `;
      
      const weekDays = ['ì¼', 'ì›”', 'í™”', 'ìˆ˜', 'ëª©', 'ê¸ˆ', 'í† '];
      
      roomTypes.forEach(rt => {
        html += `
          <div class="room-card">
            <div class="room-card-header">${rt.room_type_name}</div>
            <div class="date-grid">
        `;
        
        for (let i = 0; i < 7; i++) {
          const d = new Date(startDate);
          d.setDate(d.getDate() + i);
          html += `<div class="date-cell-header">${weekDays[d.getDay()]}</div>`;
        }
        
        for (let i = 0; i < 7; i++) {
          const d = new Date(startDate);
          d.setDate(d.getDate() + i);
          const dateStr = `${d.getFullYear()}-${String(d.getMonth() + 1).padStart(2,'0')}-${String(d.getDate()).padStart(2,'0')}`;
          const key = `${rt.id}-${dateStr}`;
          const val = inventory[key] || '';
          
          let cellClass = '';
          let display = '-';
          
          if (val) {
            if (currentHotel.inventory_type === 'count') {
              const num = parseInt(val);
              if (num >= 5) {
                cellClass = 'cell-available';
                display = num;
              } else if (num > 0) {
                cellClass = 'cell-limited';
                display = num;
              } else {
                cellClass = 'cell-closed';
                display = 'X';
              }
            } else {
              if (val === 'O') {
                cellClass = 'cell-available';
                display = 'O';
              } else if (val === 'X') {
                cellClass = 'cell-closed';
                display = 'X';
              }
            }
          }
          
          if (highlighted.has(key)) {
            cellClass += ' cell-highlighted';
          }
          
          html += `
            <div class="date-cell ${cellClass}">
              <div style="font-size: 10px; color: #666;">${d.getDate()}</div>
              <div style="font-weight: bold;">${display}</div>
            </div>
          `;
        }
        
        html += `
            </div>
          </div>
        `;
      });
      
      container.innerHTML = html;
    }
    
    function changeWeek(direction) {
      currentWeekStart += direction;
      const start = document.getElementById('startMonth').value.split('-');
      const year = parseInt(start[0]), month = parseInt(start[1]);
      renderMobileInventory(year, month);
    }
    
    async function loadNotices() {
      const hid = document.getElementById('hotelSelect').value;
      if (!hid) {
        document.getElementById('noticesSection').style.display = 'none';
        return;
      }
      
      try {
        const res = await fetch(`/api/hotel-notices?hotel_id=${hid}`);
        const notices = await res.json();
        
        const noticesList = document.getElementById('noticesList');
        const noticesSection = document.getElementById('noticesSection');
        
        if (notices.length === 0) {
          noticesSection.style.display = 'none';
        } else {
          noticesSection.style.display = 'block';
          noticesList.innerHTML = notices.map(notice => {
            const date = new Date(notice.created_at).toLocaleDateString('ko-KR');
            return `
              <div style="padding: 8px 0; border-bottom: 1px solid #f0f0f0;">
                <div style="font-size: 14px; font-weight: 500; margin-bottom: 4px;">
                  ${notice.notice_text}
                </div>
                <div style="font-size: 12px; color: #666;">
                  ${date}
                </div>
