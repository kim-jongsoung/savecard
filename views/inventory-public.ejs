          body: JSON.stringify({ message, hotelId })
        });

        const data = await res.json();
        
        // ë´‡ ì‘ë‹µ í‘œì‹œ
        typingIndicator.classList.remove('active');
        addMessage(data.reply, false);
      } catch (error) {
        typingIndicator.classList.remove('active');
        addMessage('ì£„ì†¡í•©ë‹ˆë‹¤. ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.', false);
      } finally {
