  <script>
    let hotels = [];
    let roomTypes = [];
    let inventory = {};
    let currentHotel = null;

    async function loadHotels() {
      const res = await fetch('/api/hotels?is_active=true');
      hotels = await res.json();
      const select = document.getElementById('hotelSelect');
      hotels.forEach(h => {
        const opt = document.createElement('option');
        opt.value = h.id;
        opt.textContent = h.hotel_name;
        select.appendChild(opt);
      });

      // ê¸°ë³¸ ì‹œì‘ì›” ì„¤ì • (í˜„ì¬ ì›”)
      const now = new Date();
      document.getElementById('startMonth').value = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}`;
    }

    async function loadData() {
      const hid = document.getElementById('hotelSelect').value;
      if (!hid) return;

      currentHotel = hotels.find(h => h.id == hid);
      
      // ê°ì‹¤ íƒ€ì… ë¡œë“œ
      const rtRes = await fetch(`/api/room-types?hotel_id=${hid}&is_active=true`);
      roomTypes = await rtRes.json();

      // ì¬ê³  ë¡œë“œ (6ê°œì›”)
      const start = document.getElementById('startMonth').value.split('-');
      const year = parseInt(start[0]), month = parseInt(start[1]);
      inventory = {};
      let latestUpdate = null;
      
      for (let m = 0; m < 6; m++) {
        const y = month + m > 12 ? year + 1 : year;
        const mo = month + m > 12 ? month + m - 12 : month + m;
        const res = await fetch(`/api/inventory/public?hotel_id=${hid}&year=${y}&month=${mo}`);
        const data = await res.json();
        data.forEach(inv => {
          const dateOnly = inv.availability_date.split('T')[0];
          const key = `${inv.room_type_id}-${dateOnly}`;
          
          if (currentHotel.inventory_type === 'count') {
            inventory[key] = inv.available_rooms;
          } else {
            inventory[key] = inv.available_rooms === 0 ? 'X' : (inv.available_rooms > 0 ? 'O' : '');
          }
          
          // ê°€ì¥ ìµœê·¼ ì—…ë°ì´íŠ¸ ì‹œê°„ ì¶”ì 
          if (inv.updated_at) {
            const updateTime = new Date(inv.updated_at);
            if (!latestUpdate || updateTime > latestUpdate) {
              latestUpdate = updateTime;
            }
          }
        });
      }
      
      // ë§ˆì§€ë§‰ ì—…ë°ì´íŠ¸ ì‹œê°„ í‘œì‹œ
      if (latestUpdate) {
        const year = latestUpdate.getFullYear();
        const month = String(latestUpdate.getMonth() + 1).padStart(2, '0');
        const day = String(latestUpdate.getDate()).padStart(2, '0');
        const hour = String(latestUpdate.getHours()).padStart(2, '0');
        const minute = String(latestUpdate.getMinutes()).padStart(2, '0');
        
        document.getElementById('lastUpdateTime').textContent = `${year}/${month}/${day} ${hour}:${minute}`;
        document.getElementById('lastUpdateInfo').style.display = 'block';
      } else {
        document.getElementById('lastUpdateInfo').style.display = 'none';
      }
      
      renderInventory(year, month);
    }

    function renderInventory(year, month) {
      const container = document.getElementById('inventoryContainer');
      let html = '';
      
      for (let m = 0; m < 6; m++) {
        const y = month + m > 12 ? year + 1 : year;
        const mo = month + m > 12 ? month + m - 12 : month + m;
        const monthName = new Date(y, mo - 1).toLocaleString('ko', { year: 'numeric', month: 'long' });
        const days = new Date(y, mo, 0).getDate();
        
        html += `<div class="month-section">
          <div class="month-title">${monthName}</div>
          <table class="avail-table"><thead><tr><th class="rt">ê°ì‹¤ íƒ€ì…</th>`;
        for (let d = 1; d <= days; d++) html += `<th>${d}</th>`;
        html += `</tr></thead><tbody>`;
        
        roomTypes.forEach(rt => {
          html += `<tr><td class="rt">${rt.room_type_name}</td>`;
          for (let d = 1; d <= days; d++) {
            const date = `${y}-${String(mo).padStart(2,'0')}-${String(d).padStart(2,'0')}`;
            const key = `${rt.id}-${date}`;
            const val = inventory[key] || '';
            
            let cellClass = '';
            let display = '-';
            if (val) {
              if (currentHotel.inventory_type === 'count') {
                const num = parseInt(val);
                if (num >= 5) {
                  cellClass = 'cell-available';
                  display = val;
                } else if (num > 0) {
                  cellClass = 'cell-limited';
                  display = val;
                } else {
                  cellClass = 'cell-closed';
                  display = 'X';
                }
              } else {
                if (val === 'O') {
                  cellClass = 'cell-available';
                  display = 'O';
                } else if (val === 'X') {
                  cellClass = 'cell-closed';
                  display = 'X';
                } else {
                  cellClass = 'cell-limited';
                  display = val;
                }
              }
            }
            
            html += `<td class="${cellClass}">${display}</td>`;
          }
          html += `</tr>`;
        });
        
        html += `</tbody></table></div>`;
      }
      
      container.innerHTML = html;
    }

    // ì±—ë´‡ ê¸°ëŠ¥
    function addMessage(text, isUser = false) {
      const messagesDiv = document.getElementById('chatMessages');
      const messageDiv = document.createElement('div');
      messageDiv.className = `message ${isUser ? 'user' : 'bot'}`;
      
      const time = new Date().toLocaleTimeString('ko-KR', { hour: '2-digit', minute: '2-digit' });
      
      messageDiv.innerHTML = `
