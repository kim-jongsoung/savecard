<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>사용 횟수 업데이트 테스트</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>사용 횟수 업데이트 테스트</h2>
        
        <div class="card mt-3">
            <div class="card-body">
                <h5>테스트 제휴업체 (ID: 1)</h5>
                <p>현재 사용 횟수: <span id="current-count">0</span>회</p>
                
                <div class="mb-3">
                    <label for="new-count" class="form-label">새로운 사용 횟수:</label>
                    <input type="number" class="form-control" id="new-count" min="0" value="5">
                </div>
                
                <button class="btn btn-primary" onclick="testUpdateUsageCount()">사용 횟수 업데이트 테스트</button>
                
                <div id="result" class="mt-3"></div>
            </div>
        </div>
    </div>

    <script>
        async function testUpdateUsageCount() {
            const newCount = document.getElementById('new-count').value;
            const resultDiv = document.getElementById('result');
            
            try {
                console.log('API 호출 시작:', `/admin/stores/1/usage-count`);
                console.log('전송 데이터:', { usage_count: parseInt(newCount) });
                
                const response = await fetch('/admin/stores/1/usage-count', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ usage_count: parseInt(newCount) })
                });
                
                console.log('응답 상태:', response.status);
                console.log('응답 헤더:', response.headers);
                
                const result = await response.json();
                console.log('응답 데이터:', result);
                
                if (result.success) {
                    resultDiv.innerHTML = `<div class="alert alert-success">성공: ${result.message}</div>`;
                    document.getElementById('current-count').textContent = result.usage_count || newCount;
                } else {
                    resultDiv.innerHTML = `<div class="alert alert-danger">오류: ${result.message}</div>`;
                }
                
            } catch (error) {
                console.error('JavaScript 오류:', error);
                resultDiv.innerHTML = `<div class="alert alert-danger">JavaScript 오류: ${error.message}</div>`;
            }
        }
    </script>
</body>
</html>
