                '액티비티 20% 할인': '20% discount on activities',
                '사진 인화 무료': 'Free photo printing',
                
                // 숙박/호텔 혜택
                '숙박비 10% 할인': '10% discount on accommodation',
                '조식 무료 제공': 'Free breakfast included',
                '레이트 체크아웃 무료': 'Free late check-out',
                
                // 기타 서비스
                '배송비 무료': 'Free shipping',
                '주차비 무료': 'Free parking',
                'Wi-Fi 무료': 'Free Wi-Fi'
            };
            
            // 직접 매칭 찾기
            if (translations[koreanDiscount]) {
                return translations[koreanDiscount];
            }
            
            // 패턴 기반 번역 (숫자 추출)
            const percentMatch = koreanDiscount.match(/(하드|전상품|전 품목|식사|음료|커피|액티비티|투어|숙박).*?(헐드|전상품|전 품목|식사|음료|커피|액티비티|투어|숙박)?.*?(헐드|전상품|전 품목|식사|음료|커피|액티비티|투어|숙박)?.*?(\d+)%.*?할인/);
            if (percentMatch) {
                const percent = percentMatch[4];
                return `${percent}% discount`;
            }
            
            // 금액 기반 혜택 번역
            const dollarMatch = koreanDiscount.match(/\$(\d+).*?이상.*?구매.*?시.*?(음료|커피|디저트).*?(무료|제공|1잔)/);
            if (dollarMatch) {
                const amount = dollarMatch[1];
                const item = dollarMatch[2];
                const itemTranslation = {
                    '음료': 'drink',
                    '커피': 'coffee',
                    '디저트': 'dessert'
                }[item] || 'item';
                return `Free ${itemTranslation} with purchase over $${amount}`;
            }
            
            // 기본 번역 (매칭되지 않는 경우)
            return `Special Discount Available (${koreanDiscount})`;
        }
        
        // 검색 기능 초기화
        function initializeSearch() {
            const input = document.getElementById('store_code');
            const searchResults = document.getElementById('search_results');
            
            if (!input || !searchResults) return;
            
            let selectedIndex = -1;
            let filteredStores = [];
            
            // 입력 이벤트 처리
            input.addEventListener('input', function() {
                const query = this.value.toLowerCase().trim();
                selectedIndex = -1;
                
                if (query.length === 0) {
                    searchResults.style.display = 'none';
                    hideDiscountBenefit();
                    return;
                }
                
                // 정확히 일치하는 업체가 있는지 확인
                const exactMatch = stores.find(store => 
                    store.name.toLowerCase() === query
                );
                
                if (exactMatch) {
                    showDiscountBenefit(exactMatch.name, exactMatch.discount);
                } else {
                    hideDiscountBenefit();
                }
                
                filteredStores = stores.filter(store => 
                    store.name.toLowerCase().includes(query)
                );
                
                if (filteredStores.length === 0) {
                    searchResults.style.display = 'none';
                    return;
                }
                
                updateSearchResults(filteredStores, selectedIndex);
                searchResults.style.display = 'block';
            });
            
            // 키보드 이벤트 처리 (위/아래 화살표, 엔터)
            input.addEventListener('keydown', function(e) {
                const items = searchResults.querySelectorAll('.search-result-item');
                
                if (e.key === 'ArrowDown') {
                    e.preventDefault();
                    selectedIndex = Math.min(selectedIndex + 1, items.length - 1);
                    updateSearchResults(filteredStores, selectedIndex);
                } else if (e.key === 'ArrowUp') {
                    e.preventDefault();
                    selectedIndex = Math.max(selectedIndex - 1, -1);
                    updateSearchResults(filteredStores, selectedIndex);
                } else if (e.key === 'Enter') {
                    e.preventDefault();
                    if (selectedIndex >= 0 && filteredStores[selectedIndex]) {
                        const store = filteredStores[selectedIndex];
                        selectStore(store.name, store.discount);
                    }
                } else if (e.key === 'Escape') {
                    searchResults.style.display = 'none';
                    selectedIndex = -1;
                }
            });
            
            // 포커스 시 검색 결과 다시 표시
            input.addEventListener('focus', function() {
                if (this.value.trim() && filteredStores.length > 0) {
                    searchResults.style.display = 'block';
                }
            });
            
            // 외부 클릭 시 검색 결과 숨기기
            document.addEventListener('click', function(e) {
                if (!e.target.closest('.form-group')) {
                    searchResults.style.display = 'none';
                    selectedIndex = -1;
                }
            });
            
            // 검색 결과 업데이트 함수
            function updateSearchResults(stores, highlightIndex) {
                searchResults.innerHTML = stores.map((store, index) => 
                    `<div class="search-result-item ${index === highlightIndex ? 'highlighted' : ''}" 
                          onclick="selectStore('${store.name}', '${store.discount}')"
                          onmouseenter="this.classList.add('highlighted')"
                          onmouseleave="this.classList.remove('highlighted')">
                        <div class="store-name">${store.name}</div>
                        <div class="store-discount">${store.discount || 'Discount available'}</div>
                    </div>`
                ).join('');
            }
        }
        
        // 한글 할인정보를 영어로 번역하는 함수
        function translateDiscountToEnglish(koreanText) {
            if (!koreanText || koreanText === 'undefined') {
                return 'Special Discount Available';
            }
            
            // 번역 매핑 테이블
            const translations = {
                // 할인율 패턴
                '10% 할인': '10% Discount',
                '15% 할인': '15% Discount', 
                '20% 할인': '20% Discount',
                '25% 할인': '25% Discount',
                '30% 할인': '30% Discount',
                '50% 할인': '50% Discount',
                
                // 일반적인 할인 표현
                '전 품목': 'All Items',
                '전품목': 'All Items',
                '모든 상품': 'All Products',
                '전체 상품': 'All Products',
                '전 메뉴': 'All Menu Items',
                '전메뉴': 'All Menu Items',
                '모든 메뉴': 'All Menu Items',
                
                // 특정 품목
                '음료': 'Beverages',
                '커피': 'Coffee',
                '디저트': 'Desserts',
                '케이크': 'Cakes',
                '빵': 'Bread',
                '샐러드': 'Salads',
                '파스타': 'Pasta',
                '피자': 'Pizza',
                '햄버거': 'Burgers',
                '치킨': 'Chicken',
                '스테이크': 'Steaks',
                
                // 할인 유형
                '할인': 'Discount',
                '세일': 'Sale',
                '특가': 'Special Price',
                '이벤트': 'Event',
                '프로모션': 'Promotion',
                
                // 기타 표현
                '이상': 'or more',
                '구매시': 'on purchase',
                '구매 시': 'on purchase',
                '적용': 'applied',
                '제공': 'offered',
                '혜택': 'benefit',
                '서비스': 'service',
                '무료': 'Free',
                '증정': 'Complimentary',
                
                // 숫자 + 원
                '만원': '10,000 KRW',
                '천원': '1,000 KRW',
                '원': 'KRW'
            };
            
            let englishText = koreanText;
            
            // 번역 매핑 적용
            for (const [korean, english] of Object.entries(translations)) {
                const regex = new RegExp(korean, 'g');
                englishText = englishText.replace(regex, english);
            }
            
            // 숫자% 패턴 처리
            englishText = englishText.replace(/(\d+)%/g, '$1%');
            
            // 만약 번역이 잘 안된 경우 기본 메시지
            if (englishText === koreanText && /[ㄱ-ㅎ|ㅏ-ㅣ|가-힣]/.test(koreanText)) {
                return `Special Discount Available (${koreanText})`;
            }
            
            return englishText;
        }

        // 할인혜택 표시 함수
        function showDiscountBenefit(storeName, discountInfo) {
            const discountDisplay = document.getElementById('discount_benefit_display');
            const benefitContent = document.getElementById('benefit_content');
            const applyBtn = document.getElementById('apply_discount_btn');
            
            // 할인혜택 영어 번역
            const englishDiscount = translateDiscountToEnglish(discountInfo);
            
            // 할인혜택 표시
            benefitContent.innerHTML = `
                <div class="benefit-text">${englishDiscount}</div>
                <div class="benefit-original">Original: ${discountInfo || 'Not specified'}</div>
            `;
            
            // 할인혜택 영역 표시 및 버튼 활성화
            discountDisplay.style.display = 'block';
            applyBtn.disabled = false;
            applyBtn.innerHTML = '<i class="fas fa-check me-2"></i>Apply Discount';
        }
        
        // 할인혜택 숨김 함수
        function hideDiscountBenefit() {
            const discountDisplay = document.getElementById('discount_benefit_display');
            const applyBtn = document.getElementById('apply_discount_btn');
            
            discountDisplay.style.display = 'none';
            applyBtn.disabled = true;
            applyBtn.innerHTML = '<i class="fas fa-check me-2"></i>Apply Discount';
        }
        
        // 업체 선택 함수
        function selectStore(storeName, discountInfo) {
            const input = document.getElementById('store_code');
            const searchResults = document.getElementById('search_results');
            
            // 입력필드 업데이트
            input.value = storeName;
            searchResults.style.display = 'none';
            
            // 할인혜택 표시
            showDiscountBenefit(storeName, discountInfo);
            
            // 스크롤로 할인혜택 영역으로 이동
            setTimeout(() => {
                const discountDisplay = document.getElementById('discount_benefit_display');
                discountDisplay.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'center' 
                });
            }, 100);
        }
        
        // 사용 처리 함수
        async function processUsage(event) {
            event.preventDefault();
            
            const form = event.target;
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            // token 값을 명시적으로 추가
            data.token = document.getElementById('token').value;
            
            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            // 버튼 상태 변경
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Processing...';
            submitBtn.disabled = true;
            
            try {
                const response = await fetch('/card/use', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Discount usage recorded successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.message || 'An error occurred.'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('System error occurred. Please try again.');
            } finally {
                // 버튼 상태 복원
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }
        }
        
        // DOM 로드 완료 후 초기화
        document.addEventListener('DOMContentLoaded', function() {
            // 검색 기능 초기화
            initializeSearch();
            
            // 폼 이벤트 리스너 등록
            const form = document.getElementById('usageForm');
            if (form) {
                form.addEventListener('submit', processUsage);
            }
        });
    </script>
