                    <div class="expiration-notice">
                        <%= user.expiration_text %>
                    </div>
                <% } %>

                <div class="card-info">
                    <div class="row">
                        <div class="col-6">
                            <strong><i class="fas fa-user me-2"></i>Customer Name</strong>
                            <div><%= user.customer_name %></div>
                        </div>
                        <div class="col-6">
                            <strong><i class="fas fa-building me-2"></i>Travel Agency</strong>
                            <div><%= user.agency_name %></div>
                        </div>
                    </div>
                </div>
            </div>

            <% if (isStaffMode) { %>
