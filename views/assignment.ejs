<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>수배서 - <%= assignment.id %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @media print {
            .no-print { display: none !important; }
            .container { max-width: none !important; }
        }
        .assignment-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
        }
        .status-badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }
        .info-card {
            border-left: 4px solid #667eea;
            background: #f8f9fa;
        }
        .btn-response {
            min-width: 120px;
            margin: 0.25rem;
        }
        .response-section {
            background: #fff;
            border: 2px solid #dee2e6;
            border-radius: 10px;
            padding: 2rem;
            margin-top: 2rem;
        }
        .confirmation-input {
            border: 2px solid #28a745;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <!-- 헤더 -->
    <div class="assignment-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-2">
                        <i class="fas fa-file-alt me-2"></i>수배서 #<%= assignment.id %>
                    </h1>
                    <p class="mb-0 opacity-75">
                        발행일: <%= new Date(assignment.created_at).toLocaleDateString('ko-KR') %>
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <span class="badge status-badge bg-<%= getStatusColor(assignment.status) %>">
                        <%= getStatusText(assignment.status) %>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <!-- 예약 정보 -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card info-card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>예약 정보</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <strong>예약자명:</strong><br>
                                <span class="fs-5"><%= reservation.customer_name || '정보 없음' %></span>
                            </div>
                            <div class="col-md-6">
                                <strong>예약번호:</strong><br>
                                <code><%= reservation.reservation_number || '정보 없음' %></code>
                            </div>
                            <div class="col-md-6">
                                <strong>이용일:</strong><br>
                                <%= reservation.tour_date ? new Date(reservation.tour_date).toLocaleDateString('ko-KR') : '정보 없음' %>
                            </div>
                            <div class="col-md-6">
                                <strong>이용시간:</strong><br>
                                <%= reservation.tour_time || '정보 없음' %>
                            </div>
                            <div class="col-12">
                                <strong>상품명:</strong><br>
                                <span class="text-primary fw-bold"><%= reservation.product_name || '정보 없음' %></span>
                            </div>
                            <div class="col-md-4">
                                <strong>성인:</strong> <%= reservation.adult_count || 0 %>명
                            </div>
                            <div class="col-md-4">
                                <strong>아동:</strong> <%= reservation.child_count || 0 %>명
                            </div>
                            <div class="col-md-4">
                                <strong>유아:</strong> <%= reservation.infant_count || 0 %>명
                            </div>
                            <% if (reservation.special_requests) { %>
                            <div class="col-12">
                                <strong>특별 요청사항:</strong><br>
                                <div class="alert alert-info">
                                    <%= reservation.special_requests %>
                                </div>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- 수배 정보 -->
                <div class="card info-card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-handshake me-2"></i>수배 정보</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <strong>수배업체:</strong><br>
                                <span class="fs-5"><%= assignment.vendor_name %></span>
                            </div>
                            <div class="col-md-6">
                                <strong>담당자:</strong><br>
                                <%= assignment.vendor_contact ? JSON.parse(assignment.vendor_contact).contact_person || '정보 없음' : '정보 없음' %>
                            </div>
                            <% if (assignment.notes) { %>
                            <div class="col-12">
                                <strong>특이사항:</strong><br>
                                <div class="alert alert-warning">
                                    <%= assignment.notes %>
                                </div>
                            </div>
                            <% } %>
                            <% if (assignment.cost_price) { %>
                            <div class="col-md-6">
                                <strong>수배 단가:</strong><br>
                                <span class="text-success fw-bold">
                                    <%= assignment.cost_currency || 'USD' %> <%= assignment.cost_price %>
                                </span>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 응답 섹션 -->
            <div class="col-lg-4">
                <% if (assignment.status === 'requested' || assignment.status === 'sent') { %>
                <div class="response-section">
                    <h5 class="text-center mb-4">
                        <i class="fas fa-reply me-2"></i>수배 응답
                    </h5>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-success btn-lg btn-response" onclick="confirmAssignment()">
                            <i class="fas fa-check me-2"></i>확정
                        </button>
                        <button class="btn btn-danger btn-lg btn-response" onclick="rejectAssignment()">
                            <i class="fas fa-times me-2"></i>거절
                        </button>
                    </div>

                    <!-- 확정 시 추가 정보 입력 -->
                    <div id="confirmationDetails" class="mt-4" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label fw-bold">확정번호 (선택사항)</label>
                            <input type="text" class="form-control confirmation-input" id="confirmationNumber" 
                                   placeholder="확정번호를 입력하세요">
                            <small class="text-muted">확정번호가 있는 경우 입력해주세요</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">수배 단가 (선택사항)</label>
                            <div class="input-group">
                                <select class="form-select" id="costCurrency" style="max-width: 100px;">
                                    <option value="USD">USD</option>
                                    <option value="KRW">KRW</option>
                                </select>
                                <input type="number" class="form-control" id="costPrice" 
                                       placeholder="단가" step="0.01">
                            </div>
                        </div>
                        <button class="btn btn-success w-100" onclick="submitConfirmation()">
                            <i class="fas fa-paper-plane me-2"></i>확정 완료
                        </button>
                    </div>

                    <!-- 거절 시 사유 입력 -->
                    <div id="rejectionDetails" class="mt-4" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label fw-bold">거절 사유</label>
                            <textarea class="form-control" id="rejectionReason" rows="3" 
                                      placeholder="거절 사유를 입력해주세요" required></textarea>
                        </div>
                        <button class="btn btn-danger w-100" onclick="submitRejection()">
                            <i class="fas fa-paper-plane me-2"></i>거절 완료
                        </button>
                    </div>
                </div>
                <% } else if (assignment.status === 'confirmed') { %>
                <div class="response-section text-center">
                    <div class="text-success mb-3">
                        <i class="fas fa-check-circle fa-3x"></i>
                    </div>
                    <h5 class="text-success">수배 확정 완료</h5>
                    <% if (assignment.confirmation_number) { %>
                    <p class="mb-2"><strong>확정번호:</strong></p>
                    <code class="fs-5"><%= assignment.confirmation_number %></code>
                    <% } %>
                    <% if (assignment.response_at) { %>
                    <p class="text-muted mt-3">
                        확정일: <%= new Date(assignment.response_at).toLocaleDateString('ko-KR') %>
                    </p>
                    <% } %>
                </div>
                <% } else if (assignment.status === 'rejected') { %>
                <div class="response-section text-center">
                    <div class="text-danger mb-3">
                        <i class="fas fa-times-circle fa-3x"></i>
                    </div>
                    <h5 class="text-danger">수배 거절됨</h5>
                    <% if (assignment.rejection_reason) { %>
                    <div class="alert alert-danger mt-3">
                        <strong>거절 사유:</strong><br>
                        <%= assignment.rejection_reason %>
                    </div>
                    <% } %>
                    <% if (assignment.response_at) { %>
                    <p class="text-muted mt-3">
                        거절일: <%= new Date(assignment.response_at).toLocaleDateString('ko-KR') %>
                    </p>
                    <% } %>
                </div>
                <% } %>

                <!-- 인쇄 버튼 -->
                <div class="mt-4 no-print">
                    <button class="btn btn-outline-primary w-100" onclick="window.print()">
                        <i class="fas fa-print me-2"></i>수배서 인쇄
                    </button>
                </div>
            </div>
        </div>

        <!-- 처리 이력 -->
        <% if (assignment.viewed_at || assignment.response_at) { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-history me-2"></i>처리 이력</h6>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            <div class="timeline-item">
                                <i class="fas fa-file-alt text-primary"></i>
                                <span>수배서 생성: <%= new Date(assignment.created_at).toLocaleString('ko-KR') %></span>
                            </div>
                            <% if (assignment.sent_at) { %>
                            <div class="timeline-item">
                                <i class="fas fa-paper-plane text-info"></i>
                                <span>수배서 전송: <%= new Date(assignment.sent_at).toLocaleString('ko-KR') %></span>
                            </div>
                            <% } %>
                            <% if (assignment.viewed_at) { %>
                            <div class="timeline-item">
                                <i class="fas fa-eye text-warning"></i>
                                <span>수배서 열람: <%= new Date(assignment.viewed_at).toLocaleString('ko-KR') %></span>
                            </div>
                            <% } %>
                            <% if (assignment.response_at) { %>
                            <div class="timeline-item">
                                <i class="fas fa-<%= assignment.status === 'confirmed' ? 'check' : 'times' %> text-<%= assignment.status === 'confirmed' ? 'success' : 'danger' %>"></i>
                                <span>수배 <%= assignment.status === 'confirmed' ? '확정' : '거절' %>: <%= new Date(assignment.response_at).toLocaleString('ko-KR') %></span>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 페이지 로드 시 열람 상태 업데이트
        document.addEventListener('DOMContentLoaded', function() {
            updateViewStatus();
        });

        // 열람 상태 업데이트
        async function updateViewStatus() {
            try {
                await fetch(`/api/assignment/<%= assignment.assignment_token %>/view`, {
                    method: 'POST'
                });
            } catch (error) {
                console.error('열람 상태 업데이트 실패:', error);
            }
        }

        // 확정 버튼 클릭
        function confirmAssignment() {
            document.getElementById('confirmationDetails').style.display = 'block';
            document.getElementById('rejectionDetails').style.display = 'none';
        }

        // 거절 버튼 클릭
        function rejectAssignment() {
            document.getElementById('rejectionDetails').style.display = 'block';
            document.getElementById('confirmationDetails').style.display = 'none';
        }

        // 확정 완료
        async function submitConfirmation() {
            const confirmationNumber = document.getElementById('confirmationNumber').value;
            const costPrice = document.getElementById('costPrice').value;
            const costCurrency = document.getElementById('costCurrency').value;

            try {
                const response = await fetch(`/api/assignment/<%= assignment.assignment_token %>/confirm`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        confirmation_number: confirmationNumber,
                        cost_price: costPrice ? parseFloat(costPrice) : null,
                        cost_currency: costCurrency
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('수배가 확정되었습니다.');
                    location.reload();
                } else {
                    alert('확정 처리 중 오류가 발생했습니다: ' + result.message);
                }
            } catch (error) {
                console.error('확정 처리 실패:', error);
                alert('확정 처리 중 오류가 발생했습니다.');
            }
        }

        // 거절 완료
        async function submitRejection() {
            const rejectionReason = document.getElementById('rejectionReason').value;

            if (!rejectionReason.trim()) {
                alert('거절 사유를 입력해주세요.');
                return;
            }

            try {
                const response = await fetch(`/api/assignment/<%= assignment.assignment_token %>/reject`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        rejection_reason: rejectionReason
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('수배가 거절되었습니다.');
                    location.reload();
                } else {
                    alert('거절 처리 중 오류가 발생했습니다: ' + result.message);
                }
            } catch (error) {
                console.error('거절 처리 실패:', error);
                alert('거절 처리 중 오류가 발생했습니다.');
            }
        }
    </script>

    <style>
        .timeline {
            position: relative;
            padding-left: 2rem;
        }
        .timeline-item {
            position: relative;
            padding: 0.5rem 0;
            border-left: 2px solid #dee2e6;
            padding-left: 2rem;
            margin-bottom: 1rem;
        }
        .timeline-item i {
            position: absolute;
            left: -0.6rem;
            background: white;
            padding: 0.3rem;
            border-radius: 50%;
            border: 2px solid #dee2e6;
        }
        .timeline-item:last-child {
            border-left: none;
        }
    </style>
</body>
</html>

<%
function getStatusText(status) {
    const statusMap = {
        'requested': '요청됨',
        'sent': '전송됨',
        'viewed': '열람됨', 
        'confirmed': '확정됨',
        'rejected': '거절됨'
    };
    return statusMap[status] || status;
}

function getStatusColor(status) {
    const colorMap = {
        'requested': 'warning',
        'sent': 'info',
        'viewed': 'primary',
        'confirmed': 'success',
        'rejected': 'danger'
    };
    return colorMap[status] || 'secondary';
}
%>
