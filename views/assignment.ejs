<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || '수배서' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        @media print {
            .no-print { display: none !important; }
            .container { max-width: none !important; }
        }
        .assignment-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
        }
        .status-badge {
            font-size: 0.9rem;
            padding: 0.5rem 1rem;
        }
        .info-card {
            border-left: 4px solid #667eea;
            background: #f8f9fa;
        }
        .btn-response {
            min-width: 120px;
            margin: 0.25rem;
        }
        .response-section {
            background: #fff;
            border: 2px solid #dee2e6;
            border-radius: 10px;
            padding: 2rem;
            margin-top: 2rem;
        }
        .confirmation-input {
            border: 2px solid #28a745;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="assignment-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-2">
                        <i class="bi bi-file-text me-3"></i>
                        수배서
                    </h1>
                    <p class="mb-0 opacity-75">예약번호: <%= assignment.reservation_number %></p>
                </div>
                <div class="col-md-4 text-md-end">
                    <span class="status-badge badge bg-info">
                        <i class="bi bi-clock me-1"></i>
                        수배 대기중
                    </span>
                </div>
                <div class="col-md-4 text-end">
                    <div class="text-end">
                        <p class="mb-0 opacity-75">
                            수배서 전송일시: <%= assignment.sent_at ? formatDate(assignment.sent_at) : '미전송' %>
                        </p>
                        <div class="badge bg-primary fs-6 mb-2">괌세이브카드</div>
                        <div class="text-white-50">현지 수배서</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-4">
        <!-- 기본 예약 정보 -->
        <div class="row">
            <div class="col-lg-8">
                <div class="card info-card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>예약 기본 정보</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <strong>예약번호 (ID):</strong><br>
                                <code class="fs-5"><%= assignment.reservation_number || assignment.id %></code>
                            </div>
                            <div class="col-md-6">
                                <strong>예약자명:</strong><br>
                                <span class="fs-5"><%= assignment.customer_name || '정보 없음' %></span>
                                <% if (assignment.english_first_name || assignment.english_last_name) { %>
                                <br><small class="text-muted">영문: <%= (assignment.english_first_name || '') + ' ' + (assignment.english_last_name || '') %></small>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <strong>업체명:</strong><br>
                                <span class="text-primary fw-bold"><%= assignment.vendor_name || '정보 없음' %></span>
                            </div>
                            <div class="col-md-6">
                                <strong>상품명:</strong><br>
                                <span class="text-success fw-bold"><%= assignment.product_name || '정보 없음' %></span>
                                <% if (assignment.package_type) { %>
                                <br><small class="text-muted">패키지 타입: <span class="text-info fw-bold"><%= assignment.package_type %></span></small>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <strong>출발일 / 사용일자:</strong><br>
                                <%= assignment.departure_date ? formatDate(assignment.departure_date) : '정보 없음' %>
                                <% if (assignment.usage_time) { %>
                                <br><small class="text-muted">시간: <%= assignment.usage_time %></small>
                                <% } %>
                            </div>
                            <div class="col-md-6">
                                <strong>인원:</strong><br>
                                성인 <span class="badge bg-primary"><%= assignment.adult_count || 0 %>명</span>
                                아동 <span class="badge bg-info"><%= assignment.child_count || 0 %>명</span>
                                <% if (assignment.people_infant > 0) { %>
                                유아 <span class="badge bg-secondary"><%= assignment.people_infant %>명</span>
                                <% } %>
                            </div>
                            <% if (assignment.total_amount) { %>
                            <div class="col-md-6">
                                <strong>총 금액:</strong><br>
                                <span class="text-success fw-bold fs-5"><%= formatCurrency(assignment.total_amount) %></span>
                            </div>
                            <% } %>
                            <% if (assignment.phone_number || assignment.email) { %>
                            <div class="col-md-6">
                                <strong>연락처:</strong><br>
                                <% if (assignment.phone_number) { %>
                                <i class="bi bi-telephone me-1"></i><%= assignment.phone_number %><br>
                                <% } %>
                                <% if (assignment.email) { %>
                                <i class="bi bi-envelope me-1"></i><%= assignment.email %>
                                <% } %>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- 수배 정보 -->
                <div class="card info-card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-building me-2"></i>수배 정보</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <strong>수배업체:</strong><br>
                                <span class="fs-5 text-success"><%= assignment.assignment_vendor || assignment.vendor_name || '미지정' %></span>
                            </div>
                            <div class="col-md-6">
                                <strong>수배서 전송일시:</strong><br>
                                <% if (assignment.sent_at) { %>
                                    <%= formatDate(assignment.sent_at) %> <%= new Date(assignment.sent_at).toLocaleTimeString('ko-KR') %>
                                <% } else { %>
                                    미전송
                                <% } %>
                            </div>
                            <% if (assignment.vendor_email || assignment.vendor_phone) { %>
                            <div class="col-12">
                                <strong>수배업체 연락처:</strong><br>
                                <% if (assignment.vendor_email) { %>
                                <i class="bi bi-envelope me-1"></i><%= assignment.vendor_email %><br>
                                <% } %>
                                <% if (assignment.vendor_phone) { %>
                                <i class="bi bi-telephone me-1"></i><%= assignment.vendor_phone %>
                                <% } %>
                            </div>
                            <% } %>
                            <% if (assignment.special_requests) { %>
                            <div class="col-12">
                                <strong>특별 요청사항:</strong><br>
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i><%= assignment.special_requests %>
                                </div>
                            </div>
                            <% } %>
                            <% if (assignment.notes) { %>
                            <div class="col-12">
                                <strong>수배 메모:</strong><br>
                                <div class="alert alert-warning">
                                    <i class="bi bi-sticky me-2"></i><%= assignment.notes %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 수배업체 응답 섹션 -->
            <div class="col-lg-4">
                <% if (!isPreview && assignment.status !== 'draft' && (assignment.status === 'requested' || assignment.status === 'sent')) { %>
                <div class="response-section">
                    <h5 class="text-center mb-4">
                        <i class="bi bi-reply me-2"></i>수배 응답
                    </h5>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-success btn-lg btn-response" onclick="confirmAssignment()">
                            <i class="bi bi-check-lg me-2"></i>확정
                        </button>
                        <button class="btn btn-danger btn-lg btn-response" onclick="rejectAssignment()">
                            <i class="bi bi-x-lg me-2"></i>거절
                        </button>
                    </div>

                    <!-- 확정 시 추가 정보 입력 -->
                    <div id="confirmationDetails" class="mt-4" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label fw-bold">확정번호</label>
                            <input type="text" class="form-control confirmation-input" id="confirmationNumber" 
                                   placeholder="확정번호를 입력하세요" required>
                            <small class="text-muted">수배업체에서 발급한 확정번호를 입력해주세요</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">메모 (선택사항)</label>
                            <textarea class="form-control" id="confirmationNotes" rows="2" 
                                      placeholder="추가 메모사항"></textarea>
                        </div>
                        <button class="btn btn-success w-100" onclick="submitConfirmation()">
                            <i class="bi bi-send me-2"></i>확정 완료
                        </button>
                    </div>

                    <!-- 거절 시 사유 입력 -->
                    <div id="rejectionDetails" class="mt-4" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label fw-bold">거절 사유</label>
                            <textarea class="form-control" id="rejectionReason" rows="3" 
                                      placeholder="거절 사유를 입력해주세요" required></textarea>
                        </div>
                        <button class="btn btn-danger w-100" onclick="submitRejection()">
                            <i class="bi bi-send me-2"></i>거절 완료
                        </button>
                    </div>
                </div>
                <% } else if (assignment.status === 'confirmed') { %>
                <div class="response-section text-center">
                    <div class="text-success mb-3">
                        <i class="bi bi-check-circle fa-3x"></i>
                    </div>
                    <h5 class="text-success">수배 확정 완료</h5>
                    <% if (assignment.confirmation_number) { %>
                    <p class="mb-2"><strong>확정번호:</strong></p>
                    <code class="fs-5"><%= assignment.confirmation_number %></code>
                    <% } %>
                    <% if (assignment.response_at) { %>
                    <p class="text-muted mt-3">
                        확정일: <%= formatDate(assignment.response_at) %>
                    </p>
                    <% } %>
                </div>
                <% } else if (assignment.status === 'rejected') { %>
                <div class="response-section text-center">
                    <div class="text-danger mb-3">
                        <i class="bi bi-x-circle fa-3x"></i>
                    </div>
                    <h5 class="text-danger">수배 거절됨</h5>
                    <% if (assignment.rejection_reason) { %>
                    <div class="alert alert-danger mt-3">
                        <strong>거절 사유:</strong><br>
                        <%= assignment.rejection_reason %>
                    </div>
                    <% } %>
                    <% if (assignment.response_at) { %>
                    <p class="text-muted mt-3">
                        거절일: <%= formatDate(assignment.response_at) %>
                    </p>
                    <% } %>
                </div>
                <% } else if (assignment.status === 'draft') { %>
                <div class="response-section text-center">
                    <div class="text-info mb-3">
                        <i class="bi bi-info-circle fa-3x"></i>
                    </div>
                    <h5 class="text-info">임시 수배서</h5>
                    <p class="text-muted">
                        아직 수배서가 생성되지 않았습니다.<br>
                        예약관리에서 수배서를 생성해주세요.
                    </p>
                    <% if (isPreview) { %>
                    <div class="alert alert-info mt-3">
                        <small>
                            <i class="bi bi-lightbulb me-1"></i>
                            이것은 수배서 생성 시 어떻게 보일지 미리보기입니다.
                        </small>
                    </div>
                    <% } %>
                </div>
                <% } %>

                <!-- 비상 연락처 -->
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="bi bi-telephone me-2"></i>비상 연락처</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><strong>괌세이브카드</strong></p>
                        <p class="mb-1"><i class="bi bi-telephone me-1"></i>+1-671-XXX-XXXX</p>
                        <p class="mb-1"><i class="bi bi-envelope me-1"></i>support@guamsavecard.com</p>
                        <p class="mb-0"><small class="text-muted">24시간 응급상황 대응</small></p>
                    </div>
                </div>

                <!-- 인쇄 버튼 -->
                <div class="mt-4 no-print">
                    <button class="btn btn-outline-primary w-100" onclick="window.print()">
                        <i class="bi bi-printer me-2"></i>수배서 인쇄
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const assignmentToken = '<%= assignment.assignment_token %>';

        // 확정 버튼 클릭
        function confirmAssignment() {
            document.getElementById('confirmationDetails').style.display = 'block';
            document.getElementById('rejectionDetails').style.display = 'none';
        }

        // 거절 버튼 클릭
        function rejectAssignment() {
            document.getElementById('rejectionDetails').style.display = 'block';
            document.getElementById('confirmationDetails').style.display = 'none';
        }

        // 확정 완료
        async function submitConfirmation() {
            const confirmationNumber = document.getElementById('confirmationNumber').value;
            const notes = document.getElementById('confirmationNotes').value;

            if (!confirmationNumber.trim()) {
                alert('확정번호를 입력해주세요.');
                return;
            }

            try {
                const response = await fetch(`/assignment/${assignmentToken}/confirm`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        confirmation_number: confirmationNumber,
                        notes: notes
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('수배서가 확정되었습니다!');
                    location.reload();
                } else {
                    alert('확정 처리에 실패했습니다: ' + result.message);
                }
            } catch (error) {
                console.error('확정 처리 오류:', error);
                alert('확정 처리 중 오류가 발생했습니다.');
            }
        }

        // 거절 완료
        async function submitRejection() {
            const rejectionReason = document.getElementById('rejectionReason').value;

            if (!rejectionReason.trim()) {
                alert('거절 사유를 입력해주세요.');
                return;
            }

            try {
                const response = await fetch(`/assignment/${assignmentToken}/reject`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        rejection_reason: rejectionReason
                    })
                });

                const result = await response.json();
                
                if (result.success) {
                    alert('수배서가 거절되었습니다.');
                    location.reload();
                } else {
                    alert('거절 처리에 실패했습니다: ' + result.message);
                }
            } catch (error) {
                console.error('거절 처리 오류:', error);
                alert('거절 처리 중 오류가 발생했습니다.');
            }
        }
    </script>
</body>
</html>
