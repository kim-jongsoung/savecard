            </a>
            <a href="<% if (typeof partnerAgency !== 'undefined' && partnerAgency) { %>/register?agency=<%= partnerAgency.code %><% } else { %>/register<% } %>" class="desktop-nav-tab <%= currentPage === 'register' ? 'active' : '' %>">
